---
export interface Props {
    title: string;
    description?: string;
    lang?: string;
    dir?: string;
    ogImage?: string;
}

const { 
    title, 
    description = "El Palleter - Auténtica cocina mediterránea en Benissa. Tapas y parrilla tradicional desde 1985.",
    lang = "es",
    dir = "ltr", 
    ogImage = "/images/og-image.svg"
} = Astro.props;

import '../styles/design-system.css'; 
import '../utils/breakpoints.js';
import { I18nService } from '../services/I18nService';
import AnalyticsTracker from '../components/analytics/AnalyticsTracker.astro';

await I18nService.init();

---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
        <link rel="icon" type="image/svg+xml" href="/mini-logo-dark.svg" />
        <meta name="generator" content={Astro.generator} />
        
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:image" content={new URL(ogImage, Astro.url.origin)} />
        <meta property="og:site_name" content="El Palleter" />
        
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={new URL(ogImage, Astro.url.origin)} />

        <slot name="head" />

        <title>{title}</title>
    </head>
    
    <body>
        <slot />
        
        <!-- Analytics Tracker al final del body -->
        <AnalyticsTracker />
    </body>

    <script>
        import '../utils/smooth-scroll.js';
    </script>
</html>