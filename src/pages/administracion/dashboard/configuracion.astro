---
// src/pages/administracion/dashboard/configuracion.astro
export const prerender = false;

const title = "Configuración General - Administración";
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: #141414;
            color: white;
            min-height: 100vh;
        }

        .dashboard-layout {
            display: grid;
            grid-template-columns: 280px 1fr;
            min-height: 100vh;
        }

        /* Sidebar (reutilizado) */
        .sidebar {
            background: linear-gradient(180deg, rgba(244, 162, 97, 0.1) 0%, rgba(0, 0, 0, 0.9) 100%);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(244, 162, 97, 0.2);
            padding: 2rem;
            width: 280px;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 2px solid rgba(244, 162, 97, 0.3);
        }

        .sidebar-title {
            font-size: 1.5rem;
            color: #f4a261;
            font-weight: 300;
            margin-bottom: 0.5rem;
        }

        .sidebar-nav {
            list-style: none;
        }

        .nav-item {
            margin-bottom: 0.5rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: white;
            text-decoration: none;
            padding: 1rem;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-weight: 500;
            border-left: 3px solid transparent;
        }

        .nav-link:hover,
        .nav-link.active {
            background: rgba(244, 162, 97, 0.1);
            border-left-color: #f4a261;
            transform: translateX(5px);
            color: #f4a261;
        }

        .nav-icon {
            font-size: 1.2rem;
            width: 20px;
            text-align: center;
        }

        /* Main Content */
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }

        .main-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid rgba(244, 162, 97, 0.2);
        }

        .header-left h1 {
            font-size: 2.5rem;
            font-weight: 300;
            color: white;
            margin-bottom: 0.5rem;
        }

        .header-left p {
            color: #ccc;
            opacity: 0.8;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
        }

        .btn {
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #f4a261, #e76f51);
            color: #141414;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(244, 162, 97, 0.3);
        }

        .btn-secondary {
            background: transparent;
            color: #f4a261;
            border: 1px solid rgba(244, 162, 97, 0.3);
        }

        .btn-secondary:hover {
            background: rgba(244, 162, 97, 0.1);
        }

        .btn-danger {
            background: rgba(231, 76, 60, 0.2);
            color: #e74c3c;
            border: 1px solid rgba(231, 76, 60, 0.3);
        }

        .btn-danger:hover {
            background: rgba(231, 76, 60, 0.3);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

        /* Editor Sections */
        .editor-section {
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 1px solid rgba(244, 162, 97, 0.2);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.5rem;
            color: #f4a261;
            margin-bottom: 1.5rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Form Elements */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #f4a261;
            font-weight: 500;
        }

        .form-input,
        .form-textarea,
        .form-select {
            width: 100%;
            padding: 0.8rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(244, 162, 97, 0.3);
            border-radius: 8px;
            color: white;
            font-size: 1rem;
            font-family: inherit;
        }

        .form-input:focus,
        .form-textarea:focus,
        .form-select:focus {
            outline: none;
            border-color: #f4a261;
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 0 3px rgba(244, 162, 97, 0.1);
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        /* Image Upload Sections */
        .image-upload-section {
            background: rgba(244, 162, 97, 0.05);
            border: 2px dashed rgba(244, 162, 97, 0.3);
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s ease;
            margin-bottom: 2rem;
        }

        .image-upload-section:hover {
            border-color: rgba(244, 162, 97, 0.5);
            background: rgba(244, 162, 97, 0.1);
        }

        .image-preview {
            width: 100%;
            max-width: 500px;
            height: 250px;
            margin: 0 auto 1rem;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        .image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .image-placeholder {
            color: #ccc;
            text-align: center;
            opacity: 0.7;
        }

        .image-info {
            margin-top: 1rem;
        }

        .current-image-url {
            font-size: 0.85rem;
            color: #ccc;
            opacity: 0.8;
            margin-top: 0.5rem;
            word-break: break-all;
        }

        /* File Upload */
        .file-input-wrapper {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        .file-input {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .file-input-label {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #f4a261, #e76f51);
            color: #141414;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .file-input-label:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(244, 162, 97, 0.3);
        }

        /* Toggle Switches */
        .toggle-group {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: rgba(244, 162, 97, 0.05);
            border-radius: 8px;
        }

        .toggle-switch {
            position: relative;
            width: 50px;
            height: 24px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .toggle-switch.active {
            background: #f4a261;
        }

        .toggle-switch::after {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            width: 20px;
            height: 20px;
            background: white;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .toggle-switch.active::after {
            transform: translateX(26px);
        }

        /* Status Messages */
        .status-message {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            text-align: center;
        }

        .status-success {
            background: rgba(46, 204, 113, 0.1);
            color: #2ecc71;
            border: 1px solid rgba(46, 204, 113, 0.3);
        }

        .status-error {
            background: rgba(231, 76, 60, 0.1);
            color: #e74c3c;
            border: 1px solid rgba(231, 76, 60, 0.3);
        }

        .status-info {
            background: rgba(52, 152, 219, 0.1);
            color: #3498db;
            border: 1px solid rgba(52, 152, 219, 0.3);
        }

        .loading {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 3rem;
            color: #f4a261;
        }

        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 2px solid #f4a261;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 1s ease-in-out infinite;
            margin-right: 0.5rem;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Danger Zone */
        .danger-zone {
            background: rgba(231, 76, 60, 0.05);
            border: 1px solid rgba(231, 76, 60, 0.2);
        }

        .danger-zone .section-title {
            color: #e74c3c;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .dashboard-layout {
                grid-template-columns: 1fr;
            }
            
            .sidebar {
                position: relative;
                width: 100%;
                height: auto;
            }
            
            .main-content {
                margin-left: 0;
                padding: 1rem;
            }
            
            .main-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }
            
            .form-grid {
                grid-template-columns: 1fr;
            }
            
            .image-preview {
                height: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h1 class="sidebar-title">El Palleter</h1>
                <p class="sidebar-subtitle">Panel de Administración</p>
            </div>
            
            <nav>
                <ul class="sidebar-nav">
                    <li class="nav-item">
                        <a href="/administracion/dashboard" class="nav-link">
                            <span class="nav-icon">📊</span>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/administracion/dashboard/carta" class="nav-link">
                            <span class="nav-icon">🍽️</span>
                            Carta
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/administracion/dashboard/historia" class="nav-link">
                            <span class="nav-icon">📖</span>
                            Historia
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/administracion/dashboard/contacto" class="nav-link">
                            <span class="nav-icon">📞</span>
                            Contacto
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/administracion/dashboard/configuracion" class="nav-link active">
                            <span class="nav-icon">⚙️</span>
                            Configuración
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="main-header">
                <div class="header-left">
                    <h1>Configuración General</h1>
                    <p>Gestiona las imágenes de fondo, SEO y configuración del sitio</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" id="rebuildBtn">
                        🔄 Rebuild Manual
                    </button>
                    <button class="btn btn-primary" id="saveBtn" disabled>
                        💾 Guardar Cambios
                    </button>
                </div>
            </div>

            <div id="statusMessage" style="display: none;"></div>

            <div id="loadingContent" class="loading">
                <span class="spinner"></span>
                Cargando configuración...
            </div>

            <div id="editorContent" style="display: none;">
                <!-- Imágenes de Fondo -->
                <div class="editor-section">
                    <h2 class="section-title">🖼️ Imágenes de Fondo</h2>
                    
                    <!-- Hero Background Desktop -->
                    <div class="image-upload-section">
                        <h3 style="color: #f4a261; margin-bottom: 1rem;">Fondo del Hero (Desktop)</h3>
                        <div class="image-preview" id="heroBackgroundPreview">
                            <div class="image-placeholder">
                                <div>📷</div>
                                <div>Imagen de fondo principal</div>
                            </div>
                        </div>
                        <div class="image-info">
                            <div class="file-input-wrapper">
                                <input 
                                    type="file" 
                                    class="file-input" 
                                    accept="image/*"
                                    id="heroBackgroundInput"
                                >
                                <label for="heroBackgroundInput" class="file-input-label">
                                    📷 Cambiar Fondo Principal
                                </label>
                            </div>
                            <div class="current-image-url" id="heroBackgroundUrl"></div>
                        </div>
                    </div>
                    
                    <!-- Hero Background Mobile -->
                    <div class="image-upload-section">
                        <h3 style="color: #f4a261; margin-bottom: 1rem;">Fondo del Hero (Móvil)</h3>
                        <div class="image-preview" id="heroBackgroundMobilePreview">
                            <div class="image-placeholder">
                                <div>📱</div>
                                <div>Imagen optimizada para móvil</div>
                            </div>
                        </div>
                        <div class="image-info">
                            <div class="file-input-wrapper">
                                <input 
                                    type="file" 
                                    class="file-input" 
                                    accept="image/*"
                                    id="heroBackgroundMobileInput"
                                >
                                <label for="heroBackgroundMobileInput" class="file-input-label">
                                    📱 Cambiar Fondo Móvil
                                </label>
                            </div>
                            <div class="current-image-url" id="heroBackgroundMobileUrl"></div>
                        </div>
                    </div>
                    
                    <!-- Logo -->
                    <div class="image-upload-section">
                        <h3 style="color: #f4a261; margin-bottom: 1rem;">Logo del Restaurante</h3>
                        <div class="image-preview" id="logoPreview">
                            <div class="image-placeholder">
                                <div>🏪</div>
                                <div>Logo principal del restaurante</div>
                            </div>
                        </div>
                        <div class="image-info">
                            <div class="file-input-wrapper">
                                <input 
                                    type="file" 
                                    class="file-input" 
                                    accept="image/*"
                                    id="logoInput"
                                >
                                <label for="logoInput" class="file-input-label">
                                    🏪 Cambiar Logo
                                </label>
                            </div>
                            <div class="current-image-url" id="logoUrl"></div>
                        </div>
                    </div>
                </div>

                <!-- Configuración del Sitio -->
                <div class="editor-section">
                    <h2 class="section-title">🌐 Configuración del Sitio</h2>
                    
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="siteName" class="form-label">Nombre del Sitio</label>
                            <input 
                                type="text" 
                                id="siteName" 
                                class="form-input" 
                                placeholder="El Palleter"
                            >
                        </div>
                        
                        <div class="form-group">
                            <label for="siteUrl" class="form-label">URL del Sitio</label>
                            <input 
                                type="url" 
                                id="siteUrl" 
                                class="form-input" 
                                placeholder="https://elpalleter.es"
                            >
                        </div>
                        
                        <div class="form-group">
                            <label for="defaultLanguage" class="form-label">Idioma por Defecto</label>
                            <select id="defaultLanguage" class="form-select">
                                <option value="es">Español</option>
                                <option value="en">English</option>
                                <option value="ca">Català</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="timezone" class="form-label">Zona Horaria</label>
                            <select id="timezone" class="form-select">
                                <option value="Europe/Madrid">Europe/Madrid</option>
                                <option value="Europe/London">Europe/London</option>
                                <option value="America/New_York">America/New_York</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- SEO Global -->
                <div class="editor-section">
                    <h2 class="section-title">🔍 SEO Global</h2>
                    
                    <div class="form-group">
                        <label for="metaTitleSuffix" class="form-label">Sufijo de Títulos</label>
                        <input 
                            type="text" 
                            id="metaTitleSuffix" 
                            class="form-input" 
                            placeholder=" | El Palleter"
                        >
                        <small style="color: #ccc; margin-top: 0.5rem; display: block;">
                            Se añadirá automáticamente al final de todos los títulos
                        </small>
                    </div>
                    
                    <div class="form-group">
                        <label for="metaDescriptionDefault" class="form-label">Descripción por Defecto</label>
                        <textarea 
                            id="metaDescriptionDefault" 
                            class="form-textarea" 
                            placeholder="Restaurante El Palleter en Benissa. Auténtica cocina mediterránea desde 1985."
                        ></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="ogImage" class="form-label">Imagen para Redes Sociales (OG Image)</label>
                        <input 
                            type="text" 
                            id="ogImage" 
                            class="form-input" 
                            placeholder="/assets/og-image.jpg"
                        >
                        <small style="color: #ccc; margin-top: 0.5rem; display: block;">
                            Imagen que aparece cuando compartes el sitio en redes sociales
                        </small>
                    </div>
                </div>

                <!-- Funcionalidades -->
                <div class="editor-section">
                    <h2 class="section-title">⚡ Funcionalidades</h2>
                    
                    <div class="toggle-group">
                        <div class="toggle-switch" id="toggleReservations"></div>
                        <div>
                            <strong>Reservas Online</strong>
                            <div style="color: #ccc; font-size: 0.9rem;">Permitir que los clientes hagan reservas desde el sitio web</div>
                        </div>
                    </div>
                    
                    <div class="toggle-group">
                        <div class="toggle-switch" id="toggleOrdering"></div>
                        <div>
                            <strong>Pedidos Online</strong>
                            <div style="color: #ccc; font-size: 0.9rem;">Habilitar sistema de pedidos para llevar</div>
                        </div>
                    </div>
                    
                    <div class="toggle-group">
                        <div class="toggle-switch" id="toggleNewsletter"></div>
                        <div>
                            <strong>Newsletter</strong>
                            <div style="color: #ccc; font-size: 0.9rem;">Formulario de suscripción al boletín</div>
                        </div>
                    </div>
                    
                    <div class="toggle-group">
                        <div class="toggle-switch" id="toggleBlog"></div>
                        <div>
                            <strong>Blog</strong>
                            <div style="color: #ccc; font-size: 0.9rem;">Sección de noticias y artículos</div>
                        </div>
                    </div>
                </div>

                <!-- Zona de Peligro -->
                <div class="editor-section danger-zone">
                    <h2 class="section-title">⚠️ Zona de Peligro</h2>
                    
                    <div class="toggle-group" style="background: rgba(231, 76, 60, 0.1);">
                        <div class="toggle-switch" id="toggleMaintenance"></div>
                        <div>
                            <strong style="color: #e74c3c;">Modo Mantenimiento</strong>
                            <div style="color: #ccc; font-size: 0.9rem;">El sitio mostrará una página de mantenimiento</div>
                        </div>
                    </div>
                    
                    <div class="form-group" style="margin-top: 1rem;">
                        <label for="maintenanceMessage" class="form-label">Mensaje de Mantenimiento</label>
                        <textarea 
                            id="maintenanceMessage" 
                            class="form-textarea" 
                            placeholder="Estamos actualizando nuestro sitio web. Vuelve pronto."
                        ></textarea>
                    </div>
                    
                    <div style="margin-top: 2rem; text-align: center;">
                        <button class="btn btn-danger" id="rebuildSiteBtn">
                            🔄 Rebuild Completo del Sitio
                        </button>
                        <div style="color: #ccc; font-size: 0.9rem; margin-top: 0.5rem;">
                            Regenera completamente el sitio estático (tarda 2-3 minutos)
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        let homepageData = null;
        let settingsData = null;
        let hasChanges = false;

        document.addEventListener('DOMContentLoaded', async () => {
            await loadConfigData();
            setupEventListeners();
        });

        async function loadConfigData() {
            try {
                // Cargar datos de homepage
                const homepageResponse = await fetch('/api/admin/get-data?section=homepage');
                if (homepageResponse.ok) {
                    const homepageResult = await homepageResponse.json();
                    homepageData = homepageResult.content;
                }

                // Cargar configuración
                const settingsResponse = await fetch('/api/admin/get-data?section=settings');
                if (settingsResponse.ok) {
                    const settingsResult = await settingsResponse.json();
                    settingsData = settingsResult.content;
                }

                renderEditor();
                
                document.getElementById('loadingContent').style.display = 'none';
                document.getElementById('editorContent').style.display = 'block';
                
            } catch (error) {
                console.error('Error loading config data:', error);
                showStatus('Error cargando la configuración', 'error');
            }
        }

        function renderEditor() {
            if (!homepageData || !settingsData) return;
            
            // Renderizar imágenes
            renderImages();
            
            // Configuración del sitio
            const siteConfig = settingsData.site_config || {};
            document.getElementById('siteName').value = siteConfig.site_name || '';
            document.getElementById('siteUrl').value = siteConfig.site_url || '';
            document.getElementById('defaultLanguage').value = siteConfig.default_language || 'es';
            document.getElementById('timezone').value = siteConfig.timezone || 'Europe/Madrid';
            
            // SEO
            const seoGlobal = settingsData.seo_global || {};
            document.getElementById('metaTitleSuffix').value = seoGlobal.meta_title_suffix || '';
            document.getElementById('metaDescriptionDefault').value = seoGlobal.meta_description_default || '';
            document.getElementById('ogImage').value = seoGlobal.og_image || '';
            
            // Funcionalidades
            const features = settingsData.features || {};
            setToggle('toggleReservations', features.online_reservations);
            setToggle('toggleOrdering', features.online_ordering);
            setToggle('toggleNewsletter', features.newsletter);
            setToggle('toggleBlog', features.blog);
            
            // Mantenimiento
            const maintenance = settingsData.maintenance || {};
            setToggle('toggleMaintenance', maintenance.maintenance_mode);
            document.getElementById('maintenanceMessage').value = maintenance.maintenance_message || '';
        }

        function renderImages() {
            const hero = homepageData.hero || {};
            
            // Fondo principal
            if (hero.background_image) {
                renderImagePreview('heroBackgroundPreview', hero.background_image);
                document.getElementById('heroBackgroundUrl').textContent = hero.background_image;
            }
            
            // Fondo móvil
            if (hero.background_image_mobile) {
                renderImagePreview('heroBackgroundMobilePreview', hero.background_image_mobile);
                document.getElementById('heroBackgroundMobileUrl').textContent = hero.background_image_mobile;
            }
            
            // Logo
            if (hero.logo_image) {
                renderImagePreview('logoPreview', hero.logo_image);
                document.getElementById('logoUrl').textContent = hero.logo_image;
            }
        }

        function renderImagePreview(containerId, imageSrc) {
            const container = document.getElementById(containerId);
            container.innerHTML = `<img src="${imageSrc}" alt="Preview" />`;
        }

        function setToggle(toggleId, value) {
            const toggle = document.getElementById(toggleId);
            if (value) {
                toggle.classList.add('active');
            } else {
                toggle.classList.remove('active');
            }
        }

        function setupEventListeners() {
            // Uploads de imágenes
            document.getElementById('heroBackgroundInput').addEventListener('change', (e) => {
                uploadImage(e.target.files[0], 'hero_background');
            });
            
            document.getElementById('heroBackgroundMobileInput').addEventListener('change', (e) => {
                uploadImage(e.target.files[0], 'hero_background_mobile');
            });
            
            document.getElementById('logoInput').addEventListener('change', (e) => {
                uploadImage(e.target.files[0], 'logo');
            });
            
            // Configuración del sitio
            document.getElementById('siteName').addEventListener('input', (e) => {
                if (!settingsData.site_config) settingsData.site_config = {};
                settingsData.site_config.site_name = e.target.value;
                markAsChanged();
            });
            
            document.getElementById('siteUrl').addEventListener('input', (e) => {
                if (!settingsData.site_config) settingsData.site_config = {};
                settingsData.site_config.site_url = e.target.value;
                markAsChanged();
            });
            
            document.getElementById('defaultLanguage').addEventListener('change', (e) => {
                if (!settingsData.site_config) settingsData.site_config = {};
                settingsData.site_config.default_language = e.target.value;
                markAsChanged();
            });
            
            document.getElementById('timezone').addEventListener('change', (e) => {
                if (!settingsData.site_config) settingsData.site_config = {};
                settingsData.site_config.timezone = e.target.value;
                markAsChanged();
            });
            
            // SEO
            document.getElementById('metaTitleSuffix').addEventListener('input', (e) => {
                if (!settingsData.seo_global) settingsData.seo_global = {};
                settingsData.seo_global.meta_title_suffix = e.target.value;
                markAsChanged();
            });
            
            document.getElementById('metaDescriptionDefault').addEventListener('input', (e) => {
                if (!settingsData.seo_global) settingsData.seo_global = {};
                settingsData.seo_global.meta_description_default = e.target.value;
                markAsChanged();
            });
            
            document.getElementById('ogImage').addEventListener('input', (e) => {
                if (!settingsData.seo_global) settingsData.seo_global = {};
                settingsData.seo_global.og_image = e.target.value;
                markAsChanged();
            });
            
            // Toggles
            setupToggle('toggleReservations', 'features', 'online_reservations');
            setupToggle('toggleOrdering', 'features', 'online_ordering');
            setupToggle('toggleNewsletter', 'features', 'newsletter');
            setupToggle('toggleBlog', 'features', 'blog');
            setupToggle('toggleMaintenance', 'maintenance', 'maintenance_mode');
            
            // Mensaje de mantenimiento
            document.getElementById('maintenanceMessage').addEventListener('input', (e) => {
                if (!settingsData.maintenance) settingsData.maintenance = {};
                settingsData.maintenance.maintenance_message = e.target.value;
                markAsChanged();
            });
            
            // Botones
            document.getElementById('saveBtn').addEventListener('click', saveChanges);
            document.getElementById('rebuildBtn').addEventListener('click', manualRebuild);
            document.getElementById('rebuildSiteBtn').addEventListener('click', fullRebuild);
        }

        function setupToggle(toggleId, section, key) {
            document.getElementById(toggleId).addEventListener('click', (e) => {
                const toggle = e.target;
                const isActive = toggle.classList.contains('active');
                
                if (isActive) {
                    toggle.classList.remove('active');
                } else {
                    toggle.classList.add('active');
                }
                
                if (!settingsData[section]) settingsData[section] = {};
                settingsData[section][key] = !isActive;
                markAsChanged();
            });
        }

        async function uploadImage(file, type) {
            if (!file) return;
            
            try {
                showStatus('Subiendo imagen...', 'info');
                
                const formData = new FormData();
                formData.append('file', file);
                formData.append('type', type);
                formData.append('section', 'homepage');
                
                const response = await fetch('/api/admin/upload-image', {
                    method: 'POST',
                    body: formData
                });
                
                if (!response.ok) {
                    throw new Error('Error subiendo imagen');
                }
                
                const result = await response.json();
                
                // Actualizar datos según el tipo
                if (!homepageData.hero) homepageData.hero = {};
                
                switch (type) {
                    case 'hero_background':
                        homepageData.hero.background_image = result.url;
                        renderImagePreview('heroBackgroundPreview', result.url);
                        document.getElementById('heroBackgroundUrl').textContent = result.url;
                        break;
                    case 'hero_background_mobile':
                        homepageData.hero.background_image_mobile = result.url;
                        renderImagePreview('heroBackgroundMobilePreview', result.url);
                        document.getElementById('heroBackgroundMobileUrl').textContent = result.url;
                        break;
                    case 'logo':
                        homepageData.hero.logo_image = result.url;
                        renderImagePreview('logoPreview', result.url);
                        document.getElementById('logoUrl').textContent = result.url;
                        break;
                }
                
                markAsChanged();
                showStatus('Imagen subida correctamente', 'success');
                
            } catch (error) {
                console.error('Upload error:', error);
                showStatus('Error subiendo la imagen', 'error');
            }
        }

        function markAsChanged() {
            hasChanges = true;
            document.getElementById('saveBtn').disabled = false;
        }

        async function saveChanges() {
            try {
                showStatus('Guardando cambios...', 'info');
                
                // Guardar homepage
                const homepageResponse = await fetch('/api/admin/update-data', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        section: 'homepage',
                        content: homepageData
                    })
                });
                
                if (!homepageResponse.ok) {
                    throw new Error('Error guardando homepage');
                }
                
                // Guardar configuración
                const settingsResponse = await fetch('/api/admin/update-data', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        section: 'settings',
                        content: settingsData
                    })
                });
                
                if (!settingsResponse.ok) {
                    throw new Error('Error guardando configuración');
                }
                
                hasChanges = false;
                document.getElementById('saveBtn').disabled = true;
                showStatus('Configuración guardada correctamente. El sitio se actualizará en unos minutos.', 'success');
                
            } catch (error) {
                console.error('Save error:', error);
                showStatus(error.message || 'Error guardando cambios', 'error');
            }
        }

        async function manualRebuild() {
            try {
                showStatus('Iniciando rebuild manual...', 'info');
                
                const response = await fetch('/api/admin/rebuild', {
                    method: 'POST'
                });
                
                if (!response.ok) {
                    throw new Error('Error en rebuild manual');
                }
                
                showStatus('Rebuild iniciado correctamente. El sitio se actualizará en 2-3 minutos.', 'success');
                
            } catch (error) {
                console.error('Rebuild error:', error);
                showStatus('Error en rebuild manual', 'error');
            }
        }

        async function fullRebuild() {
            if (!confirm('¿Estás seguro de hacer un rebuild completo? Esto puede tardar varios minutos.')) {
                return;
            }
            
            await manualRebuild();
        }

        function showStatus(message, type) {
            const statusEl = document.getElementById('statusMessage');
            statusEl.className = `status-message status-${type}`;
            statusEl.textContent = message;
            statusEl.style.display = 'block';
            
            if (type === 'success') {
                setTimeout(() => {
                    statusEl.style.display = 'none';
                }, 5000);
            }
        }

        // Warning before leaving with unsaved changes
        window.addEventListener('beforeunload', (e) => {
            if (hasChanges) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    </script>
