// src/components/admin/FormElements.astro
// Elementos de formulario reutilizables

<style>
    /* Form Elements */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #f4a261;
        font-weight: 500;
    }

    .form-input,
    .form-textarea,
    .form-select {
        width: 100%;
        padding: 0.8rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(244, 162, 97, 0.3);
        border-radius: 8px;
        color: white;
        font-size: 1rem;
        font-family: inherit;
    }

    .form-input:focus,
    .form-textarea:focus,
    .form-select:focus {
        outline: none;
        border-color: #f4a261;
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 0 3px rgba(244, 162, 97, 0.1);
    }

    .form-textarea {
        min-height: 120px;
        line-height: 1.6;
        resize: vertical;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .form-grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    @media (max-width: 768px) {
        .form-grid,
        .form-grid-2 {
            grid-template-columns: 1fr;
        }
    }

    /* Editor Sections */
    .editor-section {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(244, 162, 97, 0.2);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.5rem;
        color: #f4a261;
        margin-bottom: 1.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Toggle Switches */
    .toggle-group {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: rgba(244, 162, 97, 0.05);
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .toggle-switch {
        position: relative;
        width: 50px;
        height: 24px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .toggle-switch.active {
        background: #f4a261;
    }

    .toggle-switch::after {
        content: '';
        position: absolute;
        top: 2px;
        left: 2px;
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        transition: all 0.3s ease;
    }

    .toggle-switch.active::after {
        transform: translateX(26px);
    }
</style>