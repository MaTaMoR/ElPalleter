<style>
    /* Footer principal */
    .footer {
        background: rgb(15, 15, 15);
        color: white;
        padding-top: 4rem;
        border-top: 1px solid rgba(244, 162, 97, 0.2);
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 3rem;
    }

    /* Secci√≥n de marca */
    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .footer-logo {
        height: 60px;
        width: auto;
        filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.4));
    }

    .footer-description {
        font-size: 0.95rem;
        line-height: 1.6;
        opacity: 0.8;
        color: #ccc;
    }

    /* T√≠tulos de secci√≥n */
    .footer-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #f4a261;
        letter-spacing: 0.5px;
    }

    /* Enlaces */
    .footer-links ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-links li {
        margin-bottom: 0.8rem;
    }

    .footer-links a {
        color: #ccc;
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        display: block;
        padding: 0.2rem 0;
    }

    .footer-links a:hover {
        color: #f4a261;
        transform: translateX(5px);
    }

    /* Informaci√≥n de contacto */
    .contact-info p,
    .hours-info p {
        margin-bottom: 0.8rem;
        font-size: 0.95rem;
        color: #ccc;
        line-height: 1.5;
    }

    .hours-info strong {
        color: #f4a261;
        font-weight: 600;
    }

    /* Footer inferior */
    .footer-bottom {
        background: rgba(0, 0, 0, 0.3);
        margin-top: 3rem;
        padding: 1.5rem 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-bottom .footer-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        grid-template-columns: none;
        gap: 1rem;
    }

    .footer-bottom p {
        margin: 0;
        font-size: 0.9rem;
        color: #999;
    }

    /* Redes sociales */
    .footer-social {
        display: flex;
        gap: 1rem;
    }

    .footer-social a {
        font-size: 1.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        padding: 0.5rem;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
    }

    .footer-social a:hover {
        background: rgba(244, 162, 97, 0.2);
        transform: translateY(-2px);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .footer-container {
            grid-template-columns: 1fr 1fr;
            gap: 2.5rem;
        }
        
        .footer-brand {
            grid-column: 1 / -1;
            text-align: center;
            align-items: center;
        }
    }

    @media (max-width: 768px) {
        .footer {
            padding-top: 3rem;
        }
        
        .footer-container {
            grid-template-columns: 1fr;
            gap: 2rem;
            padding: 0 1.5rem;
        }
        
        .footer-brand {
            grid-column: 1;
            text-align: center;
            align-items: center;
        }
        
        .footer-links,
        .footer-contact,
        .footer-hours {
            text-align: center;
        }
        
        .footer-bottom .footer-container {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }
    }

    @media (max-width: 480px) {
        .footer-container {
            padding: 0 1rem;
        }
        
        .footer-title {
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }
        
        .footer-social {
            justify-content: center;
        }
    }
</style>

<script>
    // Funcionalidad de navegaci√≥n suave para el footer
    document.addEventListener('DOMContentLoaded', () => {
        const smoothScrollTo = (targetId) => {
            const target = document.querySelector(`#${targetId}`);
            if (target) {
                const elementPosition = target.getBoundingClientRect().top;
                const offsetPosition = elementPosition + window.pageYOffset;

                window.scrollTo({
                    top: offsetPosition,
                    behavior: 'smooth'
                });
            }
        };

        // Event listeners para enlaces del footer
        const footerLinks = document.querySelectorAll('footer a[href^="#"]');
        footerLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const href = link.getAttribute('href');
                const targetId = href.substring(1);
                if (targetId) {
                    smoothScrollTo(targetId);
                }
            });
        });
    });
</script>