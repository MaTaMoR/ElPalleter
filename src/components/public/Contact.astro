            flex-shrink: 0;
        }

        .contact-info-section:nth-child(4) .social-links {
            margin-top: 0;
            flex-shrink: 0;
        }

        .contact-info-section {
            padding: var(--padding-tablet);
        }

        .contact-info-section h4 {
            font-size: var(--text-base);
            margin-bottom: calc(var(--gap-desktop) * 0.6);
            padding-bottom: calc(var(--padding-desktop) * 0.3);
            gap: calc(var(--gap-desktop) * 0.4);
        }

        .contact-info-section p {
            margin-bottom: calc(var(--gap-desktop) * 0.3);
            font-size: var(--text-sm);
        }

        .social-links {
            gap: calc(var(--gap-desktop) * 0.6);
            margin-top: calc(var(--gap-desktop) * 0.6);
        }

        .schedule-group {
            margin-bottom: calc(var(--gap-desktop) * 0.5);
        }

        .schedule-ranges, .schedule-closed  {
            margin-left: calc(var(--padding-desktop) * 0.8);
        }
    }

    /* Desktop Large */
    @media (min-width: 1400px) {
        .contact-header {
            margin-bottom: calc(var(--gap-desktop-lg) * 1.2);
        }

        .contact-title {
            margin-bottom: var(--gap-desktop-lg);
        }

        .mini-brand {
            gap: var(--gap-desktop-lg);
        }

        .contact-content {
            padding: var(--padding-tablet);
        }

        .contact-grid {
            gap: calc(var(--gap-desktop-lg) * 0.8);
        }

        .contact-info-section {
            padding: var(--padding-tablet);
        }

        .contact-info-section:nth-child(4) {
            padding: calc(var(--padding-desktop) * 0.7) calc(var(--padding-desktop) * 0.875);
        }

        .social-links {
            gap: calc(var(--gap-desktop-lg) * 0.6);
        }
    }

    .social-links a:focus-visible {
        outline: var(--border-2) solid var(--focus-ring);
        outline-offset: var(--space-1);
    }

    @media (prefers-reduced-motion: reduce) {
        .contact-component,
        .top-bar,
        .contact-title,
        .contact-subtitle,
        .contact-info-section,
        .contact-info-section h4,
        .contact-info-section p,
        .contact-info-section strong,
        .contact-info-section a,
        .range-name,
        .range-time,
        .social-links a {
            transition: none;
        }

        .status-dot {
            animation: none;
        }

        .social-links a:hover {
            transform: none;
        }
    }

    @media (prefers-contrast: high) {
        .contact-component {
            border: var(--border-2) solid var(--accent-medium);
            background: var(--bg-surface);
        }

        .contact-info-section {
            border: var(--border-2) solid var(--accent-medium);
            background: var(--accent-light);
        }

        .status {
            border-width: var(--border-2);
        }
    }

    .contact-grid {
        contain: layout style;
    }

    .contact-info-section {
        contain: layout style paint;
    }
</style>

<script>
    import {
        useBreakpoints,
        disableTransitionsDuringResize,
    } from "../../utils/breakpoints.js";
    import { ContactStatusManager } from "../../services/ContactService.js";
    import { I18nService } from "../../services/I18nService.js";

    document.addEventListener("DOMContentLoaded", async () => {
        const contactSection = document.querySelector(".contact-section");
        const contactSections = document.querySelectorAll(
            ".contact-info-section",
        );

        const breakpoints = useBreakpoints("contact-component", {
            element: contactSection,
        });

        breakpoints.subscribe({
            onBreakpointChange: (newBreakpoint, oldBreakpoint) => {
                console.debug(
                    `Contact: Breakpoint changed ${oldBreakpoint} → ${newBreakpoint}`,
                );

                const elementsToAdjust = [...contactSections];
                disableTransitionsDuringResize(elementsToAdjust);
            },
        });

        window.addEventListener("beforeunload", () => {
            breakpoints.unsubscribe();
        });

        // Inicializar I18nService antes de usar el status manager
        try {
            await I18nService.init();
        } catch (error) {
            console.warn('Failed to initialize I18nService:', error);
        }

        // Inicializar monitoreo del estado del restaurante
        const locale = document.documentElement.lang || 'es';
        const statusManager = new ContactStatusManager(locale);

        // Actualizar estado inmediatamente al cargar la página
        statusManager.updateStatus().then(() => {
            const statusData = statusManager.lastStatus;
            if (statusData) {
                statusManager.updateStatusElements(statusData);
            }
        });

        // Monitorear cambios cada minuto
        statusManager.onStatusChange((newStatus, oldStatus) => {
            console.debug('Restaurant status changed:', oldStatus?.status, '→', newStatus.status);
            statusManager.updateStatusElements(newStatus);
        });

        statusManager.startMonitoring(60000); // Actualizar cada minuto

        // Limpiar al descargar la página
        window.addEventListener("beforeunload", () => {
            statusManager.stopMonitoring();
