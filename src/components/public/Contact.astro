            margin-bottom: calc(var(--gap-mobile) * 2);
        }

        .contact-title {
            font-size: clamp(var(--text-2xl), 4vw, var(--text-4xl));
            margin-bottom: calc(var(--gap-mobile) * 0.75);
        }

        .contact-subtitle {
            font-size: var(--text-base);
        }

        .contact-grid {
            grid-template-columns: 1fr;
            gap: calc(var(--gap-mobile) * 1.5);
        }

        .contact-content {
            padding: var(--padding-mobile);
        }

        .contact-info-section {
            padding: calc(var(--padding-mobile) * 1.25);
        }

        .contact-info-section h4 {
            font-size: var(--text-lg);
            margin-bottom: calc(var(--gap-mobile) * 1);
        }

        .schedule-ranges, .schedule-closed  {
            margin-left: calc(var(--padding-mobile) * 0.75);
        }
    }

    /* Tablet */
    @media (min-width: 768px) {
        .contact-header {
            margin-bottom: calc(var(--gap-tablet) * 1.5);
        }

        .contact-title {
            margin-bottom: var(--gap-desktop);
        }

        .mini-brand {
            gap: var(--gap-tablet);
        }

        .contact-content {
            padding: var(--padding-tablet);
        }

        /* Grid de 3 columnas y 2 filas */
        .contact-grid {
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: auto auto;
            gap: calc(var(--gap-tablet) * 0.75);
        }

        /* Dirección - Columna 1, Fila 1 */
        .contact-info-section:nth-child(1) {
            grid-column: 1;
            grid-row: 1;
        }

        /* Contacto - Columna 2, Fila 1 */
        .contact-info-section:nth-child(2) {
            grid-column: 2;
            grid-row: 1;
        }

        /* Horarios - Columna 3, Filas 1-2 (ocupa 2 filas) */
        .contact-info-section:nth-child(3) {
            grid-column: 3;
            grid-row: 1 / span 2;
        }

        /* Síguenos - Columnas 1-2, Fila 2 - COMPACTO Y HORIZONTAL */
        .contact-info-section:nth-child(4) {
            grid-column: 1 / span 2;
            grid-row: 2;
            padding: calc(var(--padding-tablet) * 0.6) calc(var(--padding-tablet) * 0.75);
            display: flex;
            align-items: center;
            gap: calc(var(--gap-tablet) * 1.5);
        }

        .contact-info-section:nth-child(4) h4 {
            margin-bottom: 0;
            border-bottom: none;
            padding-bottom: 0;
            flex-shrink: 0;
        }

        .contact-info-section:nth-child(4) .social-links {
            margin-top: 0;
            flex-shrink: 0;
        }

        .contact-info-section {
            padding: var(--padding-tablet);
        }

        .contact-info-section h4 {
            font-size: var(--text-base);
            margin-bottom: calc(var(--gap-tablet) * 0.6);
            padding-bottom: calc(var(--padding-tablet) * 0.3);
            gap: calc(var(--gap-tablet) * 0.4);
        }

        .contact-info-section p {
            margin-bottom: calc(var(--gap-tablet) * 0.3);
            font-size: var(--text-sm);
        }

        .social-links {
            gap: calc(var(--gap-tablet) * 0.6);
            margin-top: calc(var(--gap-tablet) * 0.6);
        }

        .schedule-group {
            margin-bottom: calc(var(--gap-tablet) * 0.5);
        }

        .schedule-ranges, .schedule-closed  {
            margin-left: calc(var(--padding-tablet) * 0.8);
        }
    }

    /* Desktop - DISEÑO 3x2 PERSONALIZADO */
    @media (min-width: 1024px) {
        .contact-header {
            margin-bottom: calc(var(--gap-desktop) * 1.5);
        }

        .contact-title {
            margin-bottom: var(--gap-desktop);
        }

        .mini-brand {
            gap: var(--gap-desktop);
        }

        .contact-content {
            padding: var(--padding-tablet);
        }

        /* Grid de 3 columnas y 2 filas */
        .contact-grid {
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: auto auto;
            gap: calc(var(--gap-desktop) * 0.75);
        }

        /* Dirección - Columna 1, Fila 1 */
        .contact-info-section:nth-child(1) {
            grid-column: 1;
            grid-row: 1;
        }

        /* Contacto - Columna 2, Fila 1 */
        .contact-info-section:nth-child(2) {
            grid-column: 2;
            grid-row: 1;
        }

        /* Horarios - Columna 3, Filas 1-2 (ocupa 2 filas) */
        .contact-info-section:nth-child(3) {
            grid-column: 3;
            grid-row: 1 / span 2;
        }

        /* Síguenos - Columnas 1-2, Fila 2 - COMPACTO Y HORIZONTAL */
        .contact-info-section:nth-child(4) {
