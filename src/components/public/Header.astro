---
export const prerender = true;

import Navigation from "./Navigation.astro";
import MobileSidebar from "./MobileSidebar.astro";
---

<header id="header">
    <!-- Overlay para la opacidad -->
    <div class="header-overlay"></div>

    <Navigation />
</header>

<MobileSidebar />

<style is:inline>
    header {
        width: 100%;
        height: 80px;
        position: fixed;
        top: 0;
        z-index: var(--z-header);
        display: flex;
        justify-content: center;
        align-items: center;

        background: var(--glass-bg);
        transition: var(--transition-base);
    }

    .header-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: transparent;
        backdrop-filter: var(--backdrop-blur) saturate(200%);
        -webkit-backdrop-filter: var(--backdrop-blur) saturate(200%);
        border-bottom: var(--border-1) solid var(--glass-border);
        z-index: 1;
        transition: var(--transition-base);
    }

    header.scrolled {
        background: var(--bg-surface);
        box-shadow: var(--shadow-lg);
    }

    header.transparent {
        background: transparent;
    }

    header.transparent .header-overlay {
        background: transparent;
        border-bottom: none;
        backdrop-filter: none;
    }

    header:focus-within .header-overlay {
        border-bottom-color: var(--accent-primary);
    }

    @media (max-width: 767px) {
        header {
            height: 70px;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        header,
        .header-overlay {
            transition: none;
        }
    }

    @media (prefers-contrast: high) {
        .header-overlay {
            border-bottom-width: var(--border-2);
        }
    }

    header {
        contain: layout style;
        will-change: background-color, box-shadow;
    }

    .header-overlay {
        will-change: backdrop-filter, border-color;
    }
</style>
<script>
    import ThemeService from "../../services/ThemeService.js";

    document.addEventListener("DOMContentLoaded", () => {
        if (!ThemeService.currentTheme) {
            ThemeService.initialize();
        }

        const hamburger = document.getElementById("hamburger");
        const fullscreenMenu = document.getElementById("fullscreenMenu");
        const closeMenu = document.getElementById("closeMenu");

        const handlers = new Map();

        const closeMenuFunction = () => {
            fullscreenMenu?.classList.remove("active");
            document.body.style.overflow = "";
        };

        if (hamburger) {
            const hamburgerClickHandler = (e) => {
                e.stopPropagation();
                fullscreenMenu?.classList.add("active");
                document.body.style.overflow = "hidden";
            };
            hamburger.addEventListener("click", hamburgerClickHandler);
            handlers.set('hamburger', { element: hamburger, event: 'click', handler: hamburgerClickHandler });
        }

        if (closeMenu) {
            closeMenu.addEventListener("click", closeMenuFunction);
            handlers.set('closeMenu', { element: closeMenu, event: 'click', handler: closeMenuFunction });
        }

        const menuLinks = fullscreenMenu?.querySelectorAll("a");
        const menuLinkHandlers = [];
        menuLinks?.forEach((link) => {
            link.addEventListener("click", closeMenuFunction);
            menuLinkHandlers.push({ element: link, event: 'click', handler: closeMenuFunction });
        });
        if (menuLinkHandlers.length > 0) {
            handlers.set('menuLinks', menuLinkHandlers);
        }

        const keydownHandler = (e) => {
            if (
                e.key === "Escape" &&
                fullscreenMenu?.classList.contains("active")
            ) {
                closeMenuFunction();
            }
        };
        document.addEventListener("keydown", keydownHandler);
        handlers.set('keydown', { element: document, event: 'keydown', handler: keydownHandler });

        if (fullscreenMenu) {
            const fullscreenClickHandler = (e) => {
                if (e.target === fullscreenMenu) {
                    closeMenuFunction();
                }
            };
            fullscreenMenu.addEventListener("click", fullscreenClickHandler);
            handlers.set('fullscreen', { element: fullscreenMenu, event: 'click', handler: fullscreenClickHandler });
        }

        // Cleanup
        window.addEventListener('beforeunload', () => {
            handlers.forEach((value, key) => {
                if (Array.isArray(value)) {
                    value.forEach(({ element, event, handler }) => {
                        element.removeEventListener(event, handler);
                    });
                } else {
                    const { element, event, handler } = value;
                    element.removeEventListener(event, handler);
                }
            });
            handlers.clear();
        });
    });
</script>
