<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Configuración del Intersection Observer
        const observerOptions = {
            threshold: 0.15, // Se activa cuando el 15% del elemento es visible
            rootMargin: '0px 0px -50px 0px' // Activar un poco antes de que el elemento sea completamente visible
        };

        // Crear el observer
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Añadir la clase para activar la animación
                    entry.target.classList.add('slide-in-active');
                    
                    // Opcional: dejar de observar el elemento una vez que se ha animado
                    // observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observar tanto el contenido de historia como el slider
        const historyContent = document.querySelector('.history-content');
        const sliderSection = document.querySelector('.slider-section');
        
        if (historyContent) {
            observer.observe(historyContent);
        }
        
        if (sliderSection) {
            observer.observe(sliderSection);
        }

        // OPCIONAL: Si quieres que la animación se repita cada vez que el usuario hace scroll
        // puedes comentar la línea observer.unobserve(entry.target) de arriba
        
        // OPCIONAL: Animación manual al hacer clic (para testing)
        const triggerAnimation = () => {
            if (historyContent) historyContent.classList.add('slide-in-active');
            if (sliderSection) sliderSection.classList.add('slide-in-active');
        };
        
        // Exponer función para testing manual (opcional)
        window.triggerHistoriaAnimation = triggerAnimation;
    });
</script>