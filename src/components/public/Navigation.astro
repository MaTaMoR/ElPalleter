---
// src/components/public/Navigation.astro - ACTUALIZADO con Language Picker
import epLogo from '../../assets/mini-logo.svg';
import Text from '../i18n/Text.astro';
import LanguagePicker from '../i18n/LanguagePicker.astro';
import { getI18nInfo, localizeUrl, getAlternateUrls } from '../../utils/astro-i18n-utils.js';

// Obtener información de i18n usando el nuevo sistema
const { locale } = getI18nInfo(Astro);

const localizedUrls = {
    home: localizeUrl('#home', locale, Astro),
    story: localizeUrl('#historia', locale, Astro),
    menu: localizeUrl('#carta', locale, Astro),
    contact: localizeUrl('#contacto', locale, Astro)
}
---

<nav>
    <!-- Hamburger button (solo visible en móvil) -->
    <button class="hamburger" id="hamburger" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
    </button>
    
    <!-- Nav items (desktop) con logo integrado -->
    <ul class="nav-desktop">
        <li><a data-scroll-to="inicio"><Text key="nav.home"/></a></li>
        <li><a data-scroll-to="historia"><Text key="nav.story"></a></li>
        <li class="logo-item">
            <a href="#hero" aria-label="Ir a inicio - El Palleter">
                <img src={epLogo.src} alt="El Palleter Logo" />
            </a>
        </li>
        <li><a data-scroll-to="carta"><Text key="nav.menu"/></a></li>
        <li><a data-scroll-to="contacto"><Text key="nav.contact"/></a></li>
        <!-- 🔥 NUEVO: Language Picker para Desktop -->
        <li class="language-item">
            <LanguagePicker variant="desktop" />
        </li>
    </ul>
    
    <!-- Logo solo para móvil -->
    <div class="logo-mobile">
        <a href="#hero" aria-label="Ir a inicio - El Palleter">
            <img src={epLogo.src} alt="El Palleter Logo" />
        </a>
    </div>
    
    <!-- 🔥 NUEVO: Language Picker para Mobile (solo visible en móvil) -->
    <div class="language-mobile">
        <LanguagePicker variant="mobile" />
    </div>
</nav>

<style>
    nav {
        max-width: 1200px;
        width: 100%;
        padding: 0 2rem;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        position: relative;
        display: flex;
        align-items: center;
        z-index: 2;
    }
    
    /* Hamburger (oculto en desktop) */
    .hamburger {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 10px;
        position: absolute;
        left: 1rem;
        z-index: 103;
    }
    
    .hamburger span {
        width: 25px;
        height: 3px;
        background: white;
        margin: 3px 0;
        border-radius: 2px;
        filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.4));
    }
    
    /* Logo móvil (oculto en desktop) */
    .logo-mobile {
        display: none;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        z-index: 102;
    }
    
    .logo-mobile img {
        height: 80px;
        filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.4)) 
                drop-shadow(0 0 16px rgba(0, 0, 0, 0.3));
        transition: all 0.3s ease;
    }
    
    .logo-mobile img:hover {
        transform: scale(1.03);
    }
    
    /* 🔥 NUEVO: Language Picker Mobile */
    .language-mobile {
        display: none;
        position: absolute;
        right: 1rem;
        z-index: 102;
    }
    
    /* Nav Desktop */
    .nav-desktop {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        list-style: none;
        padding: 0;
        margin: 0;
        width: 100%;
    }
    
    /* Estilo para items de navegación normales */
    .nav-desktop li:not(.logo-item):not(.language-item) a {
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 12px 16px;
        color: white;
        letter-spacing: 0.5px;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.6);
        display: block;
        text-align: center;
        white-space: nowrap;
        position: relative;
        cursor: pointer;
    }
    
    .nav-desktop li:not(.logo-item):not(.language-item) a:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-1px);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
    }
    
    /* Indicador de sección activa */
    .nav-desktop li:not(.logo-item):not(.language-item) a.active {
        background: rgba(244, 162, 97, 0.2);
        color: #f4a261;
    }
    
    /* Estilo específico para el item del logo */
    .logo-item {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 1rem;
    }
    
    .logo-item a {
        display: block;
        padding: 0;
        border-radius: 0;
        transition: all 0.3s ease;
    }
    
    .logo-item img {
        height: 80px;
        filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.4)) 
                drop-shadow(0 0 16px rgba(0, 0, 0, 0.3));
        transition: all 0.3s ease;
    }
    
    .logo-item a:hover img {
        transform: scale(1.03);
    }
    
    /* 🔥 NUEVO: Estilo para el item del language picker */
    .language-item {
        position: absolute;
        right: -10rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 0.5rem;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .hamburger {
            display: flex;
        }
        
        .nav-desktop {
            display: none;
        }
        
        .logo-mobile {
            display: block;
        }
        
        /* 🔥 NUEVO: Mostrar language picker mobile */
        .language-mobile {
            display: block;
        }
        
        nav {
            padding: 0 1rem;
        }
    }
    
    @media (max-width: 480px) {
        .logo-mobile {
            height: 80px;
        }
        
        /* Ajustar posición en pantallas muy pequeñas */
        .language-mobile {
            right: 0.5rem;
        }
    }
</style>