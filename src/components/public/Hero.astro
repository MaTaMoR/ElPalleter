---
export const prerender = true;

import lightBanner from '../../assets/banner-light.svg'; // Para tema oscuro
import darkBanner from '../../assets/banner-dark.svg';        // Para tema claro
import Text from '../i18n/Text.astro';
import HeroBackground from './HeroBackground.astro';
---

<HeroBackground 
    imageId="hero-main"
    alt="Fondo principal El Palleter"
    className="hero-main animate-in"
>
    <!-- Header: Logo dual -->
    <div class="hero-header">
        <div class="hero-logo-container">
            <!-- Logo para tema oscuro -->
            <img 
                src={lightBanner.src} 
                alt="El Palleter Logo" 
                class="hero-logo logo-dark"
                data-logo="dark"
            />
            <!-- Logo para tema claro -->
            <img 
                src={darkBanner.src} 
                alt="El Palleter Logo" 
                class="hero-logo logo-light"
                data-logo="light"
            />
        </div>
    </div>
    
    <!-- Footer: CTA y scroll indicator -->
    <div class="hero-footer">
        <a href="#carta" class="hero-cta-original" data-scroll-to="carta">
            <Text key="hero.menu" />
        </a>
        <div class="scroll-indicator-original" data-scroll-to="historia">
            <div class="scroll-arrow">↓</div>
        </div>
    </div>
</HeroBackground>

<style>
    /* === LAYOUT HERO USANDO DESIGN TOKENS === */
    
    .hero-header {
        width: 100%;
        text-align: center;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        
        /* Usando tokens de espaciado responsivo */
        padding-top: calc(var(--padding-mobile) * 5);
        padding-left: var(--padding-mobile);
        padding-right: var(--padding-mobile);
    }

    /* === CONTENEDOR DE LOGOS === */
    .hero-logo-container {
        position: relative;
        max-width: 650px;
        width: 100%;
        height: auto;
        margin-bottom: var(--space-8);
        
        /* Asegurar que mantiene las proporciones */
        aspect-ratio: 16 / 9; /* Ajusta según las proporciones de tu logo */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* === LOGOS DUALES === */
    .hero-logo {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
        
        /* Sombra usando tokens */
        filter: drop-shadow(0 var(--space-1) var(--space-4) rgba(0, 0, 0, 0.8));
        transition: opacity var(--duration-300) var(--ease-out), 
                    filter var(--duration-300) var(--ease-out);
    }

    /* Por defecto mostrar logo blanco (tema dark) */
    .logo-dark {
        opacity: 1;
    }

    .logo-light {
        opacity: 0;
    }

    /* En tema claro, mostrar logo negro */
    :root[data-theme="light"] .logo-dark,
    html[data-theme="light"] .logo-dark {
        opacity: 0;
    }

    :root[data-theme="light"] .logo-light,
    html[data-theme="light"] .logo-light {
        opacity: 1;
    }

    /* Sombras adaptativas por tema */
    .logo-dark {
        filter: drop-shadow(0 var(--space-1) var(--space-4) rgba(0, 0, 0, 0.8));
    }

    .logo-light {
        filter: drop-shadow(0 var(--space-1) var(--space-4) rgba(255, 255, 255, 0.8));
    }

    /* === BOTÓN CTA - DISEÑO ORIGINAL CON TOKENS === */
    .hero-cta-original {
        /* ✨ DISEÑO ORIGINAL: Efecto blanco/transparente */
        background: transparent;
        border: var(--border-2) solid var(--text-primary);  /* Dinámico según tema */
        color: var(--text-primary);
        
        /* Espaciado usando tokens */
        padding: calc(var(--space-3) + var(--space-1)) calc(var(--space-6) + var(--space-2));
        font-size: var(--text-sm);
        font-weight: var(--font-semibold);
        letter-spacing: var(--tracking-wide);
        text-transform: uppercase;
        cursor: pointer;
        transition: var(--transition-base);
        text-decoration: none;
        display: inline-block;
        margin-top: var(--space-4);
        border-radius: var(--radius-md);
        
        /* Sombra de texto adaptativa */
        text-shadow: 0 var(--space-1) var(--space-2) var(--text-shadow-color, rgba(0, 0, 0, 0.8));
    }

    .hero-cta-original:hover {
        /* ✨ EFECTO ADAPTATIVO */
        border-color: var(--text-primary);
        color: var(--text-primary);
        background: var(--hover-overlay);
        transform: translateY(-2px);
        
        /* ✨ GLOW ADAPTATIVO */
        box-shadow: 
            0 0 var(--space-6) var(--glow-color, rgba(255, 255, 255, 0.8)), 
            0 0 0 var(--border-1) var(--glow-color, rgba(255, 255, 255, 1));
        
        /* Text shadow adaptativo */
        text-shadow: 0 0 var(--space-4) var(--glow-color, rgba(255, 255, 255, 0.6));
    }

    .hero-cta-original:active {
        transform: translateY(-1px);
    }

    /* === FOOTER DEL HERO === */
    .hero-footer {
        position: absolute;
        bottom: 0;
        text-align: center;
        z-index: 3;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--gap-mobile);
        padding-bottom: calc(var(--padding-mobile) * 1.5);
        width: 100%;
    }

    /* === SCROLL INDICATOR - DISEÑO ORIGINAL === */
    .scroll-indicator-original {
        cursor: pointer;
        transition: var(--transition-base);
        padding: var(--padding-mobile);
    }

    .scroll-indicator-original:hover {
        transform: translateY(calc(-1 * var(--space-1)));
    }

    .scroll-arrow {
        font-size: var(--text-3xl);
        animation: bounce 2s infinite;
        text-shadow: 0 var(--space-1) var(--space-2) var(--text-shadow-color, rgba(0, 0, 0, 0.8));
        color: var(--text-primary);
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(calc(-1 * var(--space-3)));
        }
        60% {
            transform: translateY(calc(-1 * var(--space-1)));
        }
    }

    /* === VARIABLES DE TEMA === */
    :root {
        --text-shadow-color: rgba(0, 0, 0, 0.8);
        --glow-color: rgba(255, 255, 255, 0.8);
        --hover-overlay: rgba(255, 255, 255, 0.1);
    }

    :root[data-theme="light"],
    html[data-theme="light"] {
        --text-shadow-color: rgba(255, 255, 255, 0.8);
        --glow-color: rgba(0, 0, 0, 0.6);
        --hover-overlay: rgba(0, 0, 0, 0.1);
    }

    /* === RESPONSIVE USANDO TOKENS === */
    
    /* DESKTOP LARGE (1400px+) */
    @media (min-width: 1400px) {
        .hero-header {
            padding-top: calc(var(--padding-desktop) * 2.33);
            padding-left: var(--padding-desktop);
            padding-right: var(--padding-desktop);
        }

        .hero-footer {
            gap: var(--gap-desktop-lg);
            padding-bottom: var(--padding-desktop);
        }

        .hero-logo-container {
            max-width: 650px;
            margin-bottom: var(--space-12);
        }

        .hero-cta-original {
            padding: calc(var(--space-3) + var(--space-1)) calc(var(--space-8));
            font-size: var(--text-sm);
            letter-spacing: var(--tracking-wide);
            margin-top: var(--space-3);
            max-width: 200px;
        }

        .scroll-arrow {
            font-size: var(--text-4xl);
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) and (max-width: 1399px) {
        .hero-header {
            padding-top: calc(var(--padding-desktop) * 3.5);
            padding-left: var(--padding-desktop);
            padding-right: var(--padding-desktop);
        }

        .hero-cta-original {
            padding: calc(var(--space-4)) calc(var(--space-8));
            font-size: var(--text-base);
            letter-spacing: var(--tracking-normal);
            margin-top: var(--space-4);
            border-radius: var(--radius-md);
        }

        .hero-logo-container {
            max-width: 600px;
            margin-bottom: var(--space-10);
        }

        .hero-footer {
            gap: var(--gap-desktop);
            padding-bottom: var(--padding-desktop);
        }

        .scroll-arrow {
            font-size: var(--text-3xl);
        }
    }

    /* TABLET (768px+) */
    @media (min-width: 768px) and (max-width: 1023px) {
        .hero-header {
            padding-top: calc(var(--padding-tablet) * 4);
            padding-left: var(--padding-tablet);
            padding-right: var(--padding-tablet);
        }

        .hero-logo-container {
            max-width: 500px;
            margin-bottom: var(--space-8);
        }

        .hero-cta-original {
            padding: calc(var(--space-3) + var(--space-1)) calc(var(--space-6));
            font-size: var(--text-base);
            letter-spacing: var(--tracking-wide);
            margin-top: var(--space-5);
        }

        .hero-footer {
            gap: var(--gap-tablet);
            padding-bottom: calc(var(--padding-tablet) * 1.5);
        }

        .scroll-arrow {
            font-size: calc(var(--text-3xl) + var(--space-2));
        }
    }

    /* MOBILE (420px+) */
    @media (min-width: 420px) and (max-width: 767px) {
        .hero-header {
            padding-top: calc(var(--padding-mobile) * 3);
        }

        .hero-logo-container {
            max-width: 420px;
            margin-bottom: var(--space-6);
        }

        .hero-cta-original {
            padding: var(--space-3) calc(var(--space-5));
            font-size: var(--text-sm);
            letter-spacing: var(--tracking-normal);
        }

        .scroll-arrow {
            font-size: var(--text-2xl);
        }
    }

    /* MOBILE PEQUEÑO (0-419px) */
    @media (max-width: 419px) {
        .hero-header {
            padding-top: calc(var(--padding-mobile) * 2.5);
            padding-left: calc(var(--padding-mobile) * 0.75);
            padding-right: calc(var(--padding-mobile) * 0.75);
        }

        .hero-logo-container {
            max-width: 90%;
            margin-bottom: var(--space-4);
        }

        .hero-cta-original {
            padding: var(--space-2) var(--space-4);
            font-size: var(--text-xs);
            letter-spacing: var(--tracking-tight);
            margin-top: var(--space-3);
        }

        .hero-footer {
            gap: calc(var(--gap-mobile) * 0.75);
            padding-bottom: var(--padding-mobile);
        }

        .scroll-arrow {
            font-size: var(--text-xl);
        }
    }

    /* === ACCESIBILIDAD === */
    
    .hero-cta-original:focus-visible {
        outline: var(--border-2) solid var(--focus-ring);
        outline-offset: var(--space-1);
    }
    
    .scroll-indicator-original:focus-visible {
        outline: var(--border-2) solid var(--focus-ring);
        outline-offset: var(--space-1);
    }

    /* === PREFERENCIAS DE USUARIO === */
    
    @media (prefers-reduced-motion: reduce) {
        .hero-logo,
        .hero-cta-original,
        .scroll-indicator-original {
            transition: none;
        }
        
        .scroll-arrow {
            animation: none;
        }
    }
    
    @media (prefers-contrast: high) {
        .hero-cta-original {
            border-width: var(--border-4);
        }
        
        .logo-dark {
            filter: drop-shadow(0 var(--space-1) var(--space-4) rgba(0, 0, 0, 1));
        }
        
        .logo-light {
            filter: drop-shadow(0 var(--space-1) var(--space-4) rgba(255, 255, 255, 1));
        }
    }

    /* === MEJORAS DE RENDIMIENTO === */
    
    .hero-logo {
        will-change: opacity;
        backface-visibility: hidden;
    }
    
    .hero-logo-container {
        contain: layout style;
    }
</style>

<script>
    import ThemeService from "../../services/ThemeService";

    // Función para actualizar los logos según el tema
    function updateHeroLogosForTheme(theme) {
        const logosDark = document.querySelectorAll('.hero-logo[data-logo="dark"]');
        const logosLight = document.querySelectorAll('.hero-logo[data-logo="light"]');
        
        if (theme === 'light') {
            logosDark.forEach(logo => logo.style.opacity = '0');
            logosLight.forEach(logo => logo.style.opacity = '1');
        } else {
            logosDark.forEach(logo => logo.style.opacity = '1');
            logosLight.forEach(logo => logo.style.opacity = '0');
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        // Inicializar ThemeService si no está inicializado
        if (!ThemeService.currentTheme) {
            ThemeService.initialize();
        }

        // Actualizar logos al cargar
        updateHeroLogosForTheme(ThemeService.getCurrentTheme());

        // Suscribirse a cambios de tema
        ThemeService.onThemeChange((event) => {
            updateHeroLogosForTheme(event.theme);
        });
    });

    // Para navegación SPA en Astro
    document.addEventListener('astro:page-load', () => {
        if (ThemeService.currentTheme) {
            updateHeroLogosForTheme(ThemeService.getCurrentTheme());
        }
    });
</script>