---
import logoBlanco from '../../assets/logo-blanco.svg';
import Text from '../i18n/Text.astro';
import { getResponsiveBackgroundImage } from '../../utils/imageUtils.js';

// üéØ NUEVO: Obtener imagen hero del sistema din√°mico simplificado
const heroImageData = await getResponsiveBackgroundImage('hero-main', Astro);

// üîç Debug en desarrollo
if (import.meta.env.DEV) {
    console.log('üì∏ Hero: Imagen cargada:', {
        found: !!heroImageData,
        id: heroImageData?.id,
        responsive: heroImageData?.responsive
    });
}

// Fallback si no hay imagen configurada
const fallbackImage = '/src/assets/fondo.jpg'; // Usar ruta absoluta
---

<section class="hero" id="inicio" style={heroImageData ? `
    --hero-mobile: url('${heroImageData.responsive.mobile}');
    --hero-tablet: url('${heroImageData.responsive.tablet}'); 
    --hero-desktop: url('${heroImageData.responsive.desktop}');
    --hero-xl: url('${heroImageData.responsive.desktop_xl}');
    --hero-fallback: url('${heroImageData.fallback}');
` : `--hero-fallback: url('${fallbackImage}');`}>
    <!-- Secci√≥n central: t√≠tulo y subt√≠tulo -->
    <div class="hero-header">
        <img src={logoBlanco.src} alt="El Palleter Logo" class="hero-logo" />
    </div>
    <!-- Secci√≥n inferior: descripci√≥n + flecha -->
    <div class="hero-footer">
        <a href="#carta" class="cta-btn-carta" data-scroll-to="carta"><Text key="hero.menu" /></a>
        <div class="scroll-indicator" data-scroll-to="historia">
            <div class="scroll-arrow">‚Üì</div>
        </div>
    </div>
</section>

<style>
    /* === HERO BASE === */
    .hero {
        width: 100%;
        height: 100svh;
        /* üéØ √öNICO CAMBIO: Background ahora usa variables CSS inline */
        background: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), var(--hero-fallback) center/cover;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        position: relative;
        color: white;
    }

    /* üéØ NUEVO: Im√°genes responsivas (mantiene tu gradiente exacto) */
    @media (max-width: 767px) {
        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), var(--hero-mobile) center/cover;
        }
    }
    
    @media (min-width: 768px) and (max-width: 1023px) {
        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), var(--hero-tablet) center/cover;
        }
    }
    
    @media (min-width: 1024px) and (max-width: 1399px) {
        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), var(--hero-desktop) center/cover;
        }
    }
    
    @media (min-width: 1400px) {
        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), var(--hero-xl) center/cover;
        }
    }

    /* === RESTO DEL CSS EXACTAMENTE IGUAL === */
    /* === SECCI√ìN CENTRAL - USANDO SISTEMA GLOBAL === */
    .hero-header {
        width: 100%;
        text-align: center;
        z-index: 2;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        /* Mobile base - usando variables globales */
        padding-top: calc(var(--padding-mobile) * 5); /* Equivalente a 80px con padding base */
        padding-left: var(--padding-mobile);
        padding-right: var(--padding-mobile);
    }

    .hero-logo {
        /* Mobile base */
        max-width: 650px;
        width: 100%;
        height: auto;
        margin-bottom: 2rem;
        filter: drop-shadow(0 4px 15px rgba(0, 0, 0, 0.8));
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* === BOTONES - USANDO SISTEMA GLOBAL === */
    .cta-btn-carta {
        background: transparent;
        border: 2px solid white;
        color: white;
        /* Mobile base */
        padding: calc(var(--padding-mobile) * 0.8) calc(var(--padding-mobile) * 1.5);
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-block;
        margin-top: 1rem;
        border-radius: 6px;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
    }

    .cta-btn-carta:hover {
        border-color: #ffffff;
        color: #ffffff;
        transform: translateY(-2px);
        box-shadow: 0 0 25px rgba(255, 255, 255, 0.8), 
                    0 0 0 1px rgba(255, 255, 255, 1);
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.6);
    }

    /* Bot√≥n original mantenido para compatibilidad */
    .cta-btn {
        background: none;
        border: none;
        color: white;
        padding: 0.6rem 0;
        font-size: 0.85rem;
        font-weight: 400;
        letter-spacing: 0.8px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-block;
        position: relative;
        border-bottom: 2px solid rgba(255, 255, 255, 0.6);
    }

    .cta-btn::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: #f4a261;
        transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .cta-btn:hover::after {
        width: 100%;
    }

    .cta-btn:hover {
        color: #f4a261;
        transform: translateY(-1px);
    }

    /* === SECCI√ìN INFERIOR - USANDO SISTEMA GLOBAL === */
    .hero-footer {
        position: absolute;
        bottom: 0;
        text-align: center;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--gap-mobile); /* Gap responsivo autom√°tico */
        /* Mobile base */
        padding-bottom: calc(var(--padding-mobile) * 1.5);
        width: 100%;
    }

    .description {
        font-size: clamp(0.9rem, 2vw, 1.3rem);
        font-weight: 300;
        max-width: 90%;
        margin: 0;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
        opacity: 0.9;
        line-height: 1.4;
        /* Mobile base */
        padding: 0 var(--padding-mobile);
    }

    .scroll-indicator {
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        padding: var(--padding-mobile);
    }

    .scroll-indicator:hover {
        transform: translateY(-5px);
    }

    .scroll-arrow {
        /* Mobile base */
        font-size: 2rem;
        animation: bounce 2s infinite;
        text-shadow: 0 3px 8px rgba(0, 0, 0, 0.8);
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    /* === BREAKPOINTS USANDO SISTEMA GLOBAL === */

    /* DESKTOP LARGE (1400px+) */
    @media (min-width: 1400px) {
        .hero-footer {
            gap: var(--gap-desktop);
            padding-bottom: var(--padding-desktop);
        }

        .hero-logo {
            max-width: 650px;
        }

        .cta-btn-carta {
            padding: calc(var(--padding-desktop) * 0.45) calc(var(--padding-desktop) * 0.9);
            font-size: 0.85rem;
            letter-spacing: 0.8px;
            margin-top: 0.8rem;
            max-width: 200px;
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) and (max-width: 1399px) {
        .hero-header {
            padding-top: calc(var(--padding-desktop) * 3.5); /* Equivalente a 100px con sistema */
            padding-left: var(--padding-desktop);
            padding-right: var(--padding-desktop);
        }

        .cta-btn-carta {
            padding: calc(var(--padding-desktop) * 0.5) calc(var(--padding-desktop) * 1);
            font-size: 0.9rem;
            letter-spacing: 1px;
            margin-top: 1rem;
            border-radius: 6px;
        }

        .hero-logo {
            max-width: 600px;
        }

        .cta-btn {
            padding: 0.8rem 0;
            font-size: 1rem;
            letter-spacing: 1.5px;
        }

        .hero-footer {
            gap: var(--gap-desktop);
            padding-bottom: var(--padding-desktop);
        }

        .description {
            padding: 0 var(--padding-desktop);
        }
    }

    /* TABLET Y SUPERIOR (768px+) */
    @media (min-width: 768px) and (max-width: 1023px) {
        .hero-header {
            padding-top: calc(var(--padding-tablet) * 4); /* Equivalente a 100px */
            padding-left: var(--padding-tablet);
            padding-right: var(--padding-tablet);
        }

        .hero-logo {
            max-width: 500px;
        }

        .cta-btn-carta {
            padding: calc(var(--padding-tablet) * 0.6) calc(var(--padding-tablet) * 1.2);
            font-size: 0.95rem;
            letter-spacing: 1.2px;
            margin-top: 1.2rem;
        }

        .cta-btn {
            padding: 0.7rem 0;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        .hero-footer {
            gap: var(--gap-tablet);
            padding-bottom: calc(var(--padding-tablet) * 1.5);
        }

        .description {
            font-size: clamp(1rem, 2vw, 1.3rem);
            max-width: 700px;
            padding: 0 var(--padding-tablet);
        }

        .scroll-arrow {
            font-size: 2.5rem;
        }
    }

    /* MOBILE PEQUE√ëO (0-420px) */
    @media (min-width: 420px) and (max-width: 767px) {
        .hero-header {
            padding-top: calc(var(--padding-mobile) * 3); /* Equivalente a 60px */
        }

        .hero-logo {
            max-width: 420px;
        }

        .cta-btn-carta {
            padding: calc(var(--padding-mobile) * 0.8) calc(var(--padding-mobile) * 1.2);
            font-size: 0.85rem;
            letter-spacing: 1px;
        }

        .cta-btn {
            padding: 0.6rem 0;
            font-size: 0.85rem;
            letter-spacing: 0.8px;
        }

        .description {
            font-size: 0.9rem;
        }

        .scroll-arrow {
            font-size: 1.8rem;
        }
    }
</style>