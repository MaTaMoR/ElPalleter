---
export const prerender = true;

import logoBlanco from '../../assets/logo-blanco.svg';
import Text from '../i18n/Text.astro';
import HeroBackground from './HeroBackground.astro';
---

<HeroBackground 
    imageId="hero-main"
    alt="Fondo principal El Palleter"
    className="hero-main"
>
    <!-- Header: Logo -->
    <div class="hero-header">
        <img src={logoBlanco.src} alt="El Palleter Logo" class="hero-logo" />
    </div>
    
    <!-- Footer: CTA y scroll indicator -->
    <div class="hero-footer">
        <a href="#carta" class="cta-btn-carta" data-scroll-to="carta">
            <Text key="hero.menu" />
        </a>
        <div class="scroll-indicator" data-scroll-to="historia">
            <div class="scroll-arrow">‚Üì</div>
        </div>
    </div>
</HeroBackground>

<style>
    /* === LAYOUT HERO === */
    /* Ya no necesitas definir backgrounds ni media queries para im√°genes! */
    
    .hero-header {
        width: 100%;
        text-align: center;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        /* Mobile base usando variables globales */
        padding-top: calc(var(--padding-mobile) * 5);
        padding-left: var(--padding-mobile);
        padding-right: var(--padding-mobile);
    }

    .hero-logo {
        max-width: 650px;
        width: 100%;
        height: auto;
        margin-bottom: 2rem;
        filter: drop-shadow(0 4px 15px rgba(0, 0, 0, 0.8));
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* === BOTONES === */
    .cta-btn-carta {
        background: transparent;
        border: 2px solid white;
        color: white;
        padding: calc(var(--padding-mobile) * 0.8) calc(var(--padding-mobile) * 1.5);
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        display: inline-block;
        margin-top: 1rem;
        border-radius: 6px;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
    }

    .cta-btn-carta:hover {
        border-color: #ffffff;
        color: #ffffff;
        transform: translateY(-2px);
        box-shadow: 0 0 25px rgba(255, 255, 255, 0.8), 
                    0 0 0 1px rgba(255, 255, 255, 1);
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.6);
    }

    /* === FOOTER === */
    .hero-footer {
        position: absolute;
        bottom: 0;
        text-align: center;
        z-index: 3; /* üéØ SOLUCION: Por encima del header */
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--gap-mobile);
        padding-bottom: calc(var(--padding-mobile) * 1.5);
        width: 100%;
    }

    .scroll-indicator {
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        padding: var(--padding-mobile);
    }

    .scroll-indicator:hover {
        transform: translateY(-5px);
    }

    .scroll-arrow {
        font-size: 2rem;
        animation: bounce 2s infinite;
        text-shadow: 0 3px 8px rgba(0, 0, 0, 0.8);
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    /* === RESPONSIVE - SOLO PARA LAYOUT, NO PARA IM√ÅGENES === */
    
    /* DESKTOP LARGE (1400px+) */
    @media (min-width: 1400px) {
        .hero-footer {
            gap: var(--gap-desktop);
            padding-bottom: var(--padding-desktop);
        }

        .hero-logo {
            max-width: 650px;
        }

        .cta-btn-carta {
            padding: calc(var(--padding-desktop) * 0.45) calc(var(--padding-desktop) * 0.9);
            font-size: 0.85rem;
            letter-spacing: 0.8px;
            margin-top: 0.8rem;
            max-width: 200px;
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) and (max-width: 1399px) {
        .hero-header {
            padding-top: calc(var(--padding-desktop) * 3.5);
            padding-left: var(--padding-desktop);
            padding-right: var(--padding-desktop);
        }

        .cta-btn-carta {
            padding: calc(var(--padding-desktop) * 0.5) calc(var(--padding-desktop) * 1);
            font-size: 0.9rem;
            letter-spacing: 1px;
            margin-top: 1rem;
            border-radius: 6px;
        }

        .hero-logo {
            max-width: 600px;
        }

        .hero-footer {
            gap: var(--gap-desktop);
            padding-bottom: var(--padding-desktop);
        }
    }

    /* TABLET (768px+) */
    @media (min-width: 768px) and (max-width: 1023px) {
        .hero-header {
            padding-top: calc(var(--padding-tablet) * 4);
            padding-left: var(--padding-tablet);
            padding-right: var(--padding-tablet);
        }

        .hero-logo {
            max-width: 500px;
        }

        .cta-btn-carta {
            padding: calc(var(--padding-tablet) * 0.6) calc(var(--padding-tablet) * 1.2);
            font-size: 0.95rem;
            letter-spacing: 1.2px;
            margin-top: 1.2rem;
        }

        .hero-footer {
            gap: var(--gap-tablet);
            padding-bottom: calc(var(--padding-tablet) * 1.5);
        }

        .scroll-arrow {
            font-size: 2.5rem;
        }
    }

    /* MOBILE (420px+) */
    @media (min-width: 420px) and (max-width: 767px) {
        .hero-header {
            padding-top: calc(var(--padding-mobile) * 3);
        }

        .hero-logo {
            max-width: 420px;
        }

        .cta-btn-carta {
            padding: calc(var(--padding-mobile) * 0.8) calc(var(--padding-mobile) * 1.2);
            font-size: 0.85rem;
            letter-spacing: 1px;
        }

        .scroll-arrow {
            font-size: 1.8rem;
        }
    }
</style>