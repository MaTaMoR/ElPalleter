---
export const prerender = true;

import lightBanner from '../../assets/banner-light.svg';
import Text from '../i18n/Text.astro';
import HeroBackground from './HeroBackground.astro';
---

<HeroBackground 
    imageId="hero-main"
    alt="Fondo principal El Palleter"
    className="hero-main animate-in"
    adaptiveOverlay={false}
>
    <div class="hero-header">
        <div class="hero-logo-container">
            <img 
                src={lightBanner.src} 
                alt="El Palleter Logo" 
                class="hero-logo hero-logo-fixed"
            />
        </div>
    </div>
    <div class="hero-footer">
        <a href="#carta" class="hero-cta" data-scroll-to="carta">
            <Text key="hero.menu" />
        </a>
        <div class="scroll-indicator" data-scroll-to="historia">
            <div class="scroll-arrow">â†“</div>
        </div>
    </div>
</HeroBackground>

<style is:inline>
    .hero-header {
        width: 100%;
        text-align: center;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-left: var(--padding-mobile);
        padding-right: var(--padding-mobile);
    }

    .hero-logo-container {
        position: relative;
        max-width: 650px;
        width: 100%;
        height: auto;
        margin-bottom: var(--space-8);
        aspect-ratio: 16 / 9;
        display: flex;
        align-items: center;
        justify-content: center;
        contain: layout style;
        overflow: hidden;
    }

    .hero-logo-fixed {
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
        
        filter: drop-shadow(0 var(--space-1) var(--space-4) rgba(0, 0, 0, 0.8));
        transition: transform var(--duration-300) var(--ease-out);
        will-change: transform;
        backface-visibility: hidden;
    }

    .hero-logo-container:hover .hero-logo-fixed {
        transform: scale(1.02);
    }

    .hero-cta {
        background: transparent;
        border: var(--border-2) solid #ffffff;
        color: #ffffff;
        
        padding: calc(var(--space-3) + var(--space-1)) calc(var(--space-6) + var(--space-2));
        font-size: var(--text-sm);
        font-weight: var(--font-semibold);
        letter-spacing: var(--tracking-wide);
        text-transform: uppercase;
        cursor: pointer;
        transition: var(--transition-base);
        text-decoration: none;
        display: inline-block;
        margin-top: var(--space-4);
        border-radius: var(--radius-md);
        
        text-shadow: 0 var(--space-1) var(--space-2) rgba(0, 0, 0, 0.8);
    }

    .hero-cta:hover {
        border-color: #ffffff;
        color: #ffffff;
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
        
        box-shadow: 
            0 0 var(--space-6) rgba(255, 255, 255, 0.8), 
            0 0 0 var(--border-1) rgba(255, 255, 255, 1);
        
        text-shadow: 0 0 var(--space-4) rgba(255, 255, 255, 0.6);
    }

    .hero-cta:active {
        transform: translateY(-1px);
    }

    .hero-cta:focus-visible {
        outline: var(--border-2) solid rgba(255, 255, 255, 0.8);
        outline-offset: var(--space-1);
    }

    .hero-footer {
        position: absolute;
        bottom: 0;
        text-align: center;
        z-index: 3;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--gap-mobile);
        padding-bottom: calc(var(--padding-mobile) * 1.5);
        width: 100%;
    }

    .scroll-indicator {
        cursor: pointer;
        transition: var(--transition-base);
        padding: var(--padding-mobile);
    }

    .scroll-indicator:hover {
        transform: translateY(calc(-1 * var(--space-1)));
    }

    .scroll-indicator:focus-visible {
        outline: var(--border-2) solid rgba(255, 255, 255, 0.8);
        outline-offset: var(--space-1);
        border-radius: var(--radius-md);
    }

    .scroll-arrow {
        font-size: var(--text-3xl);
        animation: bounce 2s infinite;

        color: #ffffff;
        text-shadow: 0 var(--space-1) var(--space-2) rgba(0, 0, 0, 0.8);
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(calc(-1 * var(--space-3)));
        }
        60% {
            transform: translateY(calc(-1 * var(--space-1)));
        }
    }

    @media (min-width: 1400px) {
        .hero-header {
            padding-left: var(--padding-desktop);
            padding-right: var(--padding-desktop);
        }

        .hero-footer {
            gap: var(--gap-desktop-lg);
            padding-bottom: var(--padding-desktop);
        }

        .hero-logo-container {
            max-width: 650px;
            margin-bottom: var(--space-12);
        }

        .hero-cta {
            padding: calc(var(--space-3) + var(--space-1)) var(--space-8);
            font-size: var(--text-sm);
            letter-spacing: var(--tracking-wide);
            margin-top: var(--space-3);
            max-width: 200px;
        }

        .scroll-arrow {
            font-size: var(--text-4xl);
        }
    }

    @media (min-width: 1024px) and (max-width: 1399px) {
        .hero-header {
            padding-left: var(--padding-desktop);
            padding-right: var(--padding-desktop);
        }

        .hero-cta {
            padding: var(--space-4) var(--space-8);
            font-size: var(--text-base);
            letter-spacing: var(--tracking-normal);
            margin-top: var(--space-4);
            border-radius: var(--radius-md);
        }

        .hero-logo-container {
            max-width: 600px;
            margin-bottom: var(--space-10);
        }

        .hero-footer {
            gap: var(--gap-desktop);
            padding-bottom: var(--padding-desktop);
        }

        .scroll-arrow {
            font-size: var(--text-3xl);
        }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
        .hero-header {
            padding-left: var(--padding-tablet);
            padding-right: var(--padding-tablet);
        }

        .hero-logo-container {
            max-width: 500px;
            margin-bottom: var(--space-8);
        }

        .hero-cta {
            padding: calc(var(--space-3) + var(--space-1)) var(--space-6);
            font-size: var(--text-base);
            letter-spacing: var(--tracking-wide);
            margin-top: var(--space-5);
        }

        .hero-footer {
            gap: var(--gap-tablet);
            padding-bottom: calc(var(--padding-tablet) * 1.5);
        }

        .scroll-arrow {
            font-size: calc(var(--text-3xl) + var(--space-2));
        }
    }

    @media (min-width: 420px) and (max-width: 767px) {
        .hero-logo-container {
            max-width: 420px;
            margin-bottom: var(--space-6);
        }

        .hero-cta {
            padding: var(--space-3) var(--space-5);
            font-size: var(--text-sm);
            letter-spacing: var(--tracking-normal);
        }

        .scroll-arrow {
            font-size: var(--text-2xl);
        }
    }

    @media (max-width: 419px) {
        .hero-header {
            padding-left: calc(var(--padding-mobile) * 0.75);
            padding-right: calc(var(--padding-mobile) * 0.75);
        }

        .hero-logo-container {
            max-width: 90%;
            margin-bottom: var(--space-4);
        }

        .hero-cta {
            padding: var(--space-2) var(--space-4);
            font-size: var(--text-xs);
            letter-spacing: var(--tracking-tight);
            margin-top: var(--space-3);
        }

        .hero-footer {
            gap: calc(var(--gap-mobile) * 0.75);
            padding-bottom: var(--padding-mobile);
        }

        .scroll-arrow {
            font-size: var(--text-xl);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .hero-logo-fixed,
        .hero-cta,
        .scroll-indicator {
            transition: none;
        }
        
        .scroll-arrow {
            animation: none;
        }
        
        .hero-logo-container:hover .hero-logo-fixed {
            transform: none;
        }
    }
    
    @media (prefers-contrast: high) {
        .hero-cta {
            border-width: var(--border-4);
            background: rgba(0, 0, 0, 0.2);
        }
        
        .hero-logo-fixed {
            filter: drop-shadow(0 var(--space-1) var(--space-4) rgba(0, 0, 0, 1));
        }
        
        .scroll-arrow {
            text-shadow: 0 var(--space-1) var(--space-2) rgba(0, 0, 0, 1);
        }
    }

    .hero-logo-container {
        contain: layout style;
    }
    
    .hero-logo-fixed {
        will-change: transform;
        backface-visibility: hidden;
    }
    
    .hero-cta,
    .scroll-indicator {
        will-change: transform;
    }

    .hero-header.debug {
        border: 2px dashed rgba(255, 255, 255, 0.3);
    }
    
    .hero-footer.debug {
        border: 2px dashed rgba(255, 255, 255, 0.3);
    }
</style>