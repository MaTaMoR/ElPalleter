<footer class="footer">
    <div class="footer-container">
        <div class="footer-content">
            <p class="footer-copyright">
                &copy; 2025 El Palleter. Todos los derechos reservados.
            </p>
            <p class="footer-credit">
                Desarrollado por <a href="https://santiagogonzalez.dev" target="_blank" rel="noopener" class="developer-link">santiagogonzalez.dev</a>
            </p>
        </div>
    </div>
</footer>

<style>
    /* =========================================== */
    /* === CONTAINER EXTERIOR (footer) === */
    /* =========================================== */
    
    .footer {
        width: 100%;
        background: rgb(15, 15, 15);
        border-top: 1px solid rgba(244, 162, 97, 0.2);
        position: relative;
        z-index: 1;
        
        /* SOLO centra horizontalmente */
        display: flex;
        justify-content: center;
        align-items: center;
        
        /* Padding vertical mínimo */
        padding: calc(var(--padding-mobile) * 1.5) 0;
    }

    /* ============================================== */
    /* === CONTAINER INTERIOR (footer-container) === */
    /* ============================================== */
    
    .footer-container {
        max-width: 1200px;
        width: 100%;
        position: relative;
        z-index: 2;
        
        /* Padding responsivo */
        padding: 0 var(--padding-mobile);
    }

    /* === RESPONSIVE PADDING DEL CONTAINER INTERIOR === */
    @media (min-width: 768px) {
        .footer-container {
            padding: 0 var(--padding-tablet);
        }
    }

    @media (min-width: 1024px) {
        .footer-container {
            padding: 0 var(--padding-desktop);
        }
    }

    /* ======================================= */
    /* === CONTENIDO DEL FOOTER === */
    /* ======================================= */
    
    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        gap: var(--gap-mobile);
    }

    /* Copyright a la izquierda */
    .footer-copyright {
        margin: 0;
        font-size: 0.9rem;
        color: #999;
        flex: 1;
    }

    /* Crédito del desarrollador a la derecha */
    .footer-credit {
        margin: 0;
        font-size: 0.9rem;
        color: #999;
        text-align: right;
        flex: 1;
    }

    .developer-link {
        color: #f4a261;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .developer-link:hover {
        color: #fff;
        text-decoration: underline;
    }

    /* === RESPONSIVE === */
    
    /* MOBILE (hasta 767px) - Layout en columna */
    @media (max-width: 767px) {
        .footer {
            padding: calc(var(--padding-mobile) * 2) 0;
        }

        .footer-content {
            flex-direction: column-reverse;
            text-align: center;
            gap: calc(var(--gap-mobile) * 0.5);
        }

        .footer-copyright,
        .footer-credit {
            text-align: center;
            flex: none;
        }

        .footer-copyright {
            order: 2;
        }

        .footer-credit {
            order: 1;
        }
    }

    /* TABLET (768px+) */
    @media (min-width: 768px) {
        .footer {
            padding: calc(var(--padding-tablet) * 1.25) 0;
        }

        .footer-content {
            gap: var(--gap-tablet);
        }

        .footer-copyright,
        .footer-credit {
            font-size: 1rem;
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) {
        .footer {
            padding: calc(var(--padding-desktop) * 1) 0;
        }

        .footer-content {
            gap: var(--gap-desktop);
        }
    }

    /* MOBILE PEQUEÑO (hasta 420px) */
    @media (max-width: 420px) {
        .footer {
            padding: calc(var(--padding-mobile) * 1.5) 0;
        }

        .footer-copyright,
        .footer-credit {
            font-size: 0.85rem;
        }
    }
</style>