---
export const prerender = true;
---

<footer class="footer">
    <div class="footer-container">
        <div class="footer-content">
            <p class="footer-copyright">
                &copy; 2025 El Palleter. Todos los derechos reservados.
            </p>
            <p class="footer-credit">
                Desarrollado por <a href="https://santiagogonzalez.dev" target="_blank" rel="noopener" class="developer-link">santiagogonzalez.dev</a>
            </p>
        </div>
    </div>
</footer>

<style>
    /* =========================================== */
    /* === CONTAINER EXTERIOR (footer) === */
    /* =========================================== */
    
    .footer {
        width: 100%;
        background: var(--dark-800);
        border-top: var(--border-1) solid var(--glass-border);
        position: relative;
        z-index: var(--z-10);
        
        /* SOLO centra horizontalmente */
        display: flex;
        justify-content: center;
        align-items: center;
        
        /* Padding vertical usando tokens */
        padding: calc(var(--padding-mobile) * 1.5) 0;
        
        /* Transición suave para cambios de tema */
        transition: background-color var(--duration-300) var(--ease-out),
                    border-color var(--duration-300) var(--ease-out);
    }

    /* ============================================== */
    /* === CONTAINER INTERIOR (footer-container) === */
    /* ============================================== */
    
    .footer-container {
        max-width: 1200px;
        width: 100%;
        position: relative;
        z-index: var(--z-20);
        
        /* Padding responsivo usando tokens */
        padding: 0 var(--padding-mobile);
    }

    /* === RESPONSIVE PADDING DEL CONTAINER INTERIOR === */
    @media (min-width: 768px) {
        .footer-container {
            padding: 0 var(--padding-tablet);
        }
    }

    @media (min-width: 1024px) {
        .footer-container {
            padding: 0 var(--padding-desktop);
        }
    }

    /* ======================================= */
    /* === CONTENIDO DEL FOOTER === */
    /* ======================================= */
    
    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        gap: var(--gap-mobile);
    }

    /* Copyright a la izquierda */
    .footer-copyright {
        margin: 0;
        font-size: var(--text-sm);
        color: var(--text-tertiary);
        flex: 1;
        font-family: var(--font-primary);
        line-height: var(--leading-normal);
        transition: color var(--duration-300) var(--ease-out);
    }

    /* Crédito del desarrollador a la derecha */
    .footer-credit {
        margin: 0;
        font-size: var(--text-sm);
        color: var(--text-tertiary);
        text-align: right;
        flex: 1;
        font-family: var(--font-primary);
        line-height: var(--leading-normal);
        transition: color var(--duration-300) var(--ease-out);
    }

    .developer-link {
        color: var(--accent-primary);
        font-weight: var(--font-medium);
        text-decoration: none;
        transition: var(--transition-colors);
    }

    .developer-link:hover {
        color: var(--text-primary);
        text-decoration: underline;
    }

    .developer-link:focus-visible {
        outline: var(--border-2) solid var(--focus-ring);
        outline-offset: var(--space-1);
        border-radius: var(--radius-sm);
    }

    /* === VARIANTES DE TEMA === */
    
    /* Tema claro - footer más oscuro para contrastar con MainContent */
    :root[data-theme="light"] .footer,
    html[data-theme="light"] .footer {
        background: var(--glass-bg); /* Más oscuro que el gray-100 del MainContent */
        border-top-color: var(--gray-500); /* Border más visible en tema claro */
    }

    :root[data-theme="light"] .footer-copyright,
    html[data-theme="light"] .footer-copyright,
    :root[data-theme="light"] .footer-credit,
    html[data-theme="light"] .footer-credit {
        color: var(--text-primary); /* Texto más oscuro para mejor contraste */
    }

    :root[data-theme="light"] .developer-link:hover,
    html[data-theme="light"] .developer-link:hover {
        color: var(--text-primary);
    }

    /* === RESPONSIVE === */
    
    /* MOBILE (hasta 767px) - Layout en columna */
    @media (max-width: 767px) {
        .footer {
            padding: calc(var(--padding-mobile) * 2) 0;
        }

        .footer-content {
            flex-direction: column-reverse;
            text-align: center;
            gap: calc(var(--gap-mobile) * 0.5);
        }

        .footer-copyright,
        .footer-credit {
            text-align: center;
            flex: none;
        }

        .footer-copyright {
            order: 2;
        }

        .footer-credit {
            order: 1;
        }
    }

    /* TABLET (768px+) */
    @media (min-width: 768px) {
        .footer {
            padding: calc(var(--padding-tablet) * 1.25) 0;
        }

        .footer-content {
            gap: var(--gap-tablet);
        }

        .footer-copyright,
        .footer-credit {
            font-size: var(--text-base);
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) {
        .footer {
            padding: calc(var(--padding-desktop) * 1) 0;
        }

        .footer-content {
            gap: var(--gap-desktop);
        }
    }

    /* MOBILE PEQUEÑO (hasta 420px) */
    @media (max-width: 420px) {
        .footer {
            padding: calc(var(--padding-mobile) * 1.5) 0;
        }

        .footer-copyright,
        .footer-credit {
            font-size: var(--text-xs);
        }
    }

    /* === ACCESIBILIDAD === */
    
    /* Preferencias de movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        .footer,
        .footer-copyright,
        .footer-credit,
        .developer-link {
            transition: none;
        }
    }
    
    /* Alto contraste */
    @media (prefers-contrast: high) {
        .footer {
            border-top-width: var(--border-2);
        }
        
        .footer-copyright,
        .footer-credit {
            color: var(--text-primary);
        }
        
        .developer-link {
            text-decoration: underline;
        }
    }

    /* === MEJORAS DE RENDIMIENTO === */
    
    .footer {
        contain: layout style paint;
    }

    /* === ESTADOS ADICIONALES === */
    
    /* Estado de carga */
    .footer.loading {
        opacity: 0.8;
        pointer-events: none;
    }

    /* === MODO PRINT === */
    
    @media print {
        .footer {
            background: white;
            border-top: var(--border-1) solid #ccc;
            color: black;
        }
        
        .footer-copyright,
        .footer-credit {
            color: black;
        }
        
        .developer-link {
            color: black;
            text-decoration: underline;
        }
    }

    /* === DEBUGGING EN DESARROLLO === */
    
    [data-debug="true"] .footer {
        outline: 2px dashed red;
    }
    
    [data-debug="true"] .footer-container {
        outline: 2px dashed blue;
    }
    
    [data-debug="true"] .footer-content {
        outline: 1px dashed green;
    }
</style>