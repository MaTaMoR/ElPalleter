---
export const prerender = true;
---

<footer class="footer">
    <div class="footer-container">
        <div class="footer-content">
            <p class="footer-copyright">
                &copy; 2025 El Palleter. Todos los derechos reservados.
            </p>
            <p class="footer-credit">
                Desarrollado por <a href="https://santiagogonzalez.dev" target="_blank" rel="noopener" class="developer-link">santiagogonzalez.dev</a>
            </p>
        </div>
    </div>
</footer>

<style>
    .footer {
        width: 100%;
        background: var(--dark-800);
        border-top: var(--border-1) solid var(--glass-border);
        position: relative;
        z-index: var(--z-10);
        
        display: flex;
        justify-content: center;
        align-items: center;
        
        padding: calc(var(--padding-mobile) * 1.5) 0;
        
        transition: background-color var(--duration-300) var(--ease-out),
                    border-color var(--duration-300) var(--ease-out);
    }
    
    .footer-container {
        max-width: 1200px;
        width: 100%;
        position: relative;
        z-index: var(--z-20);
        
        padding: 0 var(--padding-mobile);
    }

    @media (min-width: 768px) {
        .footer-container {
            padding: 0 var(--padding-tablet);
        }
    }

    @media (min-width: 1024px) {
        .footer-container {
            padding: 0 var(--padding-desktop);
        }
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        gap: var(--gap-mobile);
    }

    .footer-copyright {
        margin: 0;
        font-size: var(--text-sm);
        color: var(--text-tertiary);
        flex: 1;
        font-family: var(--font-primary);
        line-height: var(--leading-normal);
        transition: color var(--duration-300) var(--ease-out);
    }

    .footer-credit {
        margin: 0;
        font-size: var(--text-sm);
        color: var(--text-tertiary);
        text-align: right;
        flex: 1;
        font-family: var(--font-primary);
        line-height: var(--leading-normal);
        transition: color var(--duration-300) var(--ease-out);
    }

    .developer-link {
        color: var(--accent-primary);
        font-weight: var(--font-medium);
        text-decoration: none;
        transition: var(--transition-colors);
    }

    .developer-link:hover {
        color: var(--text-primary);
        text-decoration: underline;
    }

    .developer-link:focus-visible {
        outline: var(--border-2) solid var(--focus-ring);
        outline-offset: var(--space-1);
        border-radius: var(--radius-sm);
    }

    :root[data-theme="light"] .footer,
    html[data-theme="light"] .footer {
        background: var(--glass-bg);
        border-top-color: var(--glass-border);
    }

    :root[data-theme="light"] .footer-copyright,
    html[data-theme="light"] .footer-copyright,
    :root[data-theme="light"] .footer-credit,
    html[data-theme="light"] .footer-credit {
        color: var(--text-primary);
    }

    :root[data-theme="light"] .developer-link:hover,
    html[data-theme="light"] .developer-link:hover {
        color: var(--text-primary);
    }

    @media (max-width: 767px) {
        .footer {
            padding: calc(var(--padding-mobile) * 2) 0;
        }

        .footer-content {
            flex-direction: column-reverse;
            text-align: center;
            gap: calc(var(--gap-mobile) * 0.5);
        }

        .footer-copyright,
        .footer-credit {
            text-align: center;
            flex: none;
        }

        .footer-copyright {
            order: 2;
        }

        .footer-credit {
            order: 1;
        }
    }

    @media (min-width: 768px) {
        .footer {
            padding: calc(var(--padding-tablet) * 1.25) 0;
        }

        .footer-content {
            gap: var(--gap-tablet);
        }

        .footer-copyright,
        .footer-credit {
            font-size: var(--text-base);
        }
    }

    @media (min-width: 1024px) {
        .footer {
            padding: calc(var(--padding-desktop) * 1) 0;
        }

        .footer-content {
            gap: var(--gap-desktop);
        }
    }

    @media (max-width: 420px) {
        .footer {
            padding: calc(var(--padding-mobile) * 1.5) 0;
        }

        .footer-copyright,
        .footer-credit {
            font-size: var(--text-xs);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .footer,
        .footer-copyright,
        .footer-credit,
        .developer-link {
            transition: none;
        }
    }
    
    @media (prefers-contrast: high) {
        .footer {
            border-top-width: var(--border-2);
        }
        
        .footer-copyright,
        .footer-credit {
            color: var(--text-primary);
        }
        
        .developer-link {
            text-decoration: underline;
        }
    }
    
    .footer {
        contain: layout style paint;
    }

    .footer.loading {
        opacity: 0.8;
        pointer-events: none;
    }
    
    @media print {
        .footer {
            background: white;
            border-top: var(--border-1) solid #ccc;
            color: black;
        }
        
        .footer-copyright,
        .footer-credit {
            color: black;
        }
        
        .developer-link {
            color: black;
            text-decoration: underline;
        }
    }
</style>