<style>
    /* FOOTER BASE */
    .footer {
        background: rgb(15, 15, 15);
        color: white;
        padding-top: calc(var(--padding-mobile) * 4);
        border-top: 1px solid rgba(244, 162, 97, 0.2);
    }

    /* CONTAINER PRINCIPAL usando sistema global */
    .footer-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--gap-mobile);
    }

    /* SECCI√ìN DE MARCA */
    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: var(--gap-mobile);
        text-align: center;
        align-items: center;
    }

    .footer-logo {
        height: 60px;
        width: auto;
        filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.4));
    }

    .footer-description {
        font-size: 0.95rem;
        line-height: 1.6;
        opacity: 0.8;
        color: #ccc;
        max-width: 400px;
    }

    /* T√çTULOS DE SECCI√ìN */
    .footer-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #f4a261;
        letter-spacing: 0.5px;
    }

    /* INFORMACI√ìN DE CONTACTO Y HORARIOS */
    .footer-contact,
    .footer-hours {
        text-align: center;
    }

    .contact-info p,
    .hours-info p {
        margin-bottom: 0.8rem;
        font-size: 0.95rem;
        color: #ccc;
        line-height: 1.5;
    }

    .hours-info strong {
        color: #f4a261;
        font-weight: 600;
    }

    /* FOOTER INFERIOR */
    .footer-bottom {
        background: rgba(0, 0, 0, 0.3);
        margin-top: calc(var(--gap-mobile) * 3);
        padding: calc(var(--padding-mobile) * 1.5) 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer-bottom .footer-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: var(--gap-mobile);
        grid-template-columns: none;
        text-align: center;
    }

    .footer-bottom p {
        margin: 0;
        font-size: 0.9rem;
        color: #999;
    }

    /* REDES SOCIALES */
    .footer-social {
        display: flex;
        gap: var(--gap-mobile);
        justify-content: center;
    }

    .footer-social a {
        font-size: 1.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        padding: 0.5rem;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
    }

    .footer-social a:hover {
        background: rgba(244, 162, 97, 0.2);
        transform: translateY(-2px);
    }

    /* === BREAKPOINTS EST√ÅNDAR === */
    
    /* TABLET (768px+) */
    @media (min-width: 768px) {
        .footer {
            padding-top: calc(var(--padding-tablet) * 2);
        }
        
        .footer-container {
            grid-template-columns: 1fr 1fr;
            gap: var(--gap-tablet);
        }
        
        .footer-brand {
            grid-column: 1 / -1;
            text-align: center;
            align-items: center;
        }
        
        .footer-contact,
        .footer-hours {
            text-align: center;
        }
        
        .footer-bottom {
            margin-top: calc(var(--gap-tablet) * 2);
            padding: var(--padding-tablet) 0;
        }
        
        .footer-bottom .footer-container {
            flex-direction: row;
            justify-content: space-between;
            text-align: left;
        }
        
        .footer-social {
            gap: var(--gap-tablet);
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) {
        .footer {
            padding-top: calc(var(--padding-desktop) * 2);
        }
        
        .footer-container {
            grid-template-columns: 2fr 1fr 1fr;
            gap: var(--gap-desktop);
        }
        
        .footer-brand {
            grid-column: 1;
            text-align: left;
            align-items: flex-start;
        }
        
        .footer-contact,
        .footer-hours {
            text-align: left;
        }
        
        .footer-bottom {
            margin-top: var(--gap-desktop);
            padding: var(--padding-desktop) 0;
        }
        
        .footer-social {
            gap: var(--gap-desktop);
        }
    }

    /* DESKTOP GRANDE (1400px+) */
    @media (min-width: 1400px) {
        .footer-container {
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: var(--gap-desktop-lg);
        }
        
        .footer-social {
            gap: var(--gap-desktop-lg);
        }
    }
</style>

<script>
    // Funcionalidad de navegaci√≥n suave para el footer
    document.addEventListener('DOMContentLoaded', () => {
        const smoothScrollTo = (targetId) => {
            const target = document.querySelector(`#${targetId}`);
            if (target) {
                const elementPosition = target.getBoundingClientRect().top;
                const offsetPosition = elementPosition + window.pageYOffset;

                window.scrollTo({
                    top: offsetPosition,
                    behavior: 'smooth'
                });
            }
        };

        // Event listeners para enlaces del footer
        const footerLinks = document.querySelectorAll('footer a[href^="#"]');
        footerLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const href = link.getAttribute('href');
                const targetId = href.substring(1);
                if (targetId) {
                    smoothScrollTo(targetId);
                }
            });
        });
    });
</script>