---
export const prerender = true;
---

<footer class="footer">
    <div class="footer-container">
        <div class="footer-content">
            <p class="footer-copyright">
                &copy; 2025 El Palleter. Todos los derechos reservados.
            </p>
            <p class="footer-credit">
                Desarrollado por <a href="https://santiagogonzalez.dev" target="_blank" rel="noopener" class="developer-link">santiagogonzalez.dev</a>
            </p>
        </div>
    </div>
</footer>

<style>
    /* =========================================== */
    /* === CONTAINER EXTERIOR (footer) === */
    /* =========================================== */
    
    .footer {
        width: 100%;
        background: var(--dark-800);                    /* rgb(15, 15, 15) */
        border-top: var(--border-1) solid var(--glass-border); /* rgba(244, 162, 97, 0.2) */
        position: relative;
        z-index: var(--z-10);
        
        /* SOLO centra horizontalmente */
        display: flex;
        justify-content: center;
        align-items: center;
        
        /* Padding vertical usando tokens */
        padding: calc(var(--padding-mobile) * 1.5) 0;
    }

    /* ============================================== */
    /* === CONTAINER INTERIOR (footer-container) === */
    /* ============================================== */
    
    .footer-container {
        max-width: 1200px;
        width: 100%;
        position: relative;
        z-index: var(--z-20);
        
        /* Padding responsivo usando tokens */
        padding: 0 var(--padding-mobile);
    }

    /* === RESPONSIVE PADDING DEL CONTAINER INTERIOR === */
    @media (min-width: 768px) {
        .footer-container {
            padding: 0 var(--padding-tablet);
        }
    }

    @media (min-width: 1024px) {
        .footer-container {
            padding: 0 var(--padding-desktop);
        }
    }

    /* ======================================= */
    /* === CONTENIDO DEL FOOTER === */
    /* ======================================= */
    
    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        gap: var(--gap-mobile);
    }

    /* Copyright a la izquierda */
    .footer-copyright {
        margin: 0;
        font-size: var(--text-sm);                      /* 0.9rem */
        color: var(--text-tertiary);                    /* #999 equivalent */
        flex: 1;
        font-family: var(--font-primary);
        line-height: var(--leading-normal);
    }

    /* Crédito del desarrollador a la derecha */
    .footer-credit {
        margin: 0;
        font-size: var(--text-sm);                      /* 0.9rem */
        color: var(--text-tertiary);                    /* #999 equivalent */
        text-align: right;
        flex: 1;
        font-family: var(--font-primary);
        line-height: var(--leading-normal);
    }

    .developer-link {
        color: var(--accent-primary);                   /* #f4a261 */
        font-weight: var(--font-medium);                /* 500 */
        text-decoration: none;
        transition: var(--transition-colors);           /* Transición optimizada */
    }

    .developer-link:hover {
        color: var(--text-primary);                     /* #fff */
        text-decoration: underline;
    }

    .developer-link:focus-visible {
        outline: var(--border-2) solid var(--focus-ring);
        outline-offset: var(--space-1);
        border-radius: var(--radius-sm);
    }

    /* === RESPONSIVE === */
    
    /* MOBILE (hasta 767px) - Layout en columna */
    @media (max-width: 767px) {
        .footer {
            padding: calc(var(--padding-mobile) * 2) 0;
        }

        .footer-content {
            flex-direction: column-reverse;
            text-align: center;
            gap: calc(var(--gap-mobile) * 0.5);
        }

        .footer-copyright,
        .footer-credit {
            text-align: center;
            flex: none;
        }

        .footer-copyright {
            order: 2;
        }

        .footer-credit {
            order: 1;
        }
    }

    /* TABLET (768px+) */
    @media (min-width: 768px) {
        .footer {
            padding: calc(var(--padding-tablet) * 1.25) 0;
        }

        .footer-content {
            gap: var(--gap-tablet);
        }

        .footer-copyright,
        .footer-credit {
            font-size: var(--text-base);               /* 1rem */
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) {
        .footer {
            padding: calc(var(--padding-desktop) * 1) 0;
        }

        .footer-content {
            gap: var(--gap-desktop);
        }
    }

    /* MOBILE PEQUEÑO (hasta 420px) */
    @media (max-width: 420px) {
        .footer {
            padding: calc(var(--padding-mobile) * 1.5) 0;
        }

        .footer-copyright,
        .footer-credit {
            font-size: var(--text-xs);                 /* 0.85rem equivalent */
        }
    }

    /* === VARIANTES DE TEMA === */
    
    /* Tema claro */
    [data-theme="light"] .footer {
        background: var(--gray-100);                    /* Fondo claro para tema light */
        border-top-color: var(--border-primary);
    }

    [data-theme="light"] .footer-copyright,
    [data-theme="light"] .footer-credit {
        color: var(--text-secondary);                   /* Texto más oscuro en tema claro */
    }

    [data-theme="light"] .developer-link:hover {
        color: var(--text-primary);                     /* Texto principal en hover */
    }

    /* === ACCESIBILIDAD === */
    
    /* Preferencias de movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        .developer-link {
            transition: none;
        }
    }
    
    /* Alto contraste */
    @media (prefers-contrast: high) {
        .footer {
            border-top-width: var(--border-2);
        }
        
        .footer-copyright,
        .footer-credit {
            color: var(--text-primary);
        }
        
        .developer-link {
            text-decoration: underline;
        }
    }

    /* === MEJORAS DE RENDIMIENTO === */
    
    .footer {
        contain: layout style paint;
    }

    /* === VARIANTES TEMÁTICAS ADICIONALES === */
    
    [data-theme="gold"] .developer-link {
        color: var(--accent-primary);                   /* Dorado en tema gold */
    }
    
    [data-theme="blue"] .developer-link {
        color: var(--accent-primary);                   /* Azul en tema blue */
    }
    
    [data-theme="restaurant"] .developer-link {
        color: var(--accent-primary);                   /* Marrón en tema restaurant */
    }
</style>