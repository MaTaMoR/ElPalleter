---
export const prerender = true;

import Text from '../../components/i18n/Text.astro';
import cartaData from '../../data/carta-data.json';
import { i18nCore } from '../../i18n/core.js';
---

<!-- üéØ SIMPLIFICADO: Solo la secci√≥n sin padding externo ni background -->
<section class="carta-section" id="carta">
    <div class="carta-container container">
        <div class="carta-header">
            <h2 class="carta-title">
                <Text key="carta.title" fallback="Carta" />
            </h2>
            <p class="carta-subtitle">
                <Text key="carta.subtitle" fallback="Aut√©ntica cocina mediterr√°nea desde 1985" />
            </p>
        </div>

        <!-- Navegaci√≥n de categor√≠as -->
        <div class="menu-nav">
            {cartaData.categories.map((category, index) => (
                <button 
                    class={`menu-nav-btn ${index === 0 ? 'active' : ''}`} 
                    data-category={category.id}
                >
                    <Text key={category.nameKey} fallback={category.id} />
                </button>
            ))}
        </div>

        <!-- Contenido del men√∫ -->
        <div class="menu-content">
            {cartaData.categories.map((category, categoryIndex) => (
                <div 
                    class={`menu-section ${categoryIndex === 0 ? 'active' : ''}`} 
                    id={category.id}
                >
                    {category.subcategories.map((subcategory) => (
                        <div class="menu-category">
                            <h3 class="category-title">
                                <Text key={subcategory.nameKey} fallback={subcategory.id} />
                            </h3>
                            
                            {subcategory.items.map((item) => (
                                <div class="menu-item">
                                    <div class="item-info">
                                        <div class="item-name">
                                            <Text key={item.nameKey} fallback={item.id} />
                                        </div>
                                        {item.descriptionKey && (
                                            <div class="item-description">
                                                <Text key={item.descriptionKey} fallback="" />
                                            </div>
                                        )}
                                    </div>
                                    <div class="item-price">
                                        {i18nCore.formatCurrency(item.price)}
                                    </div>
                                </div>
                            ))}
                        </div>
                    ))}
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    /* =====================================================
       CARTA SECTION - ACTUALIZADO CON DESIGN TOKENS
       Mantiene exactamente el mismo dise√±o visual
       ===================================================== */

    /* === CARTA SECTION SIMPLIFICADA === */
    .carta-section {
        min-height: 90svh;
        position: relative;
    }

    .carta-container {
        z-index: 2;
        position: relative;
    }

    /* === HEADER USANDO TOKENS === */
    .carta-header {
        text-align: center;
        margin-bottom: calc(var(--gap-mobile) * 3);
    }

    .carta-title {
        font-size: clamp(var(--text-3xl), 4vw, var(--text-5xl)); /* Tokens en lugar de clamp(2rem, 4vw, 3.5rem) */
        font-weight: var(--font-light);                          /* Token en lugar de 300 */
        color: var(--accent-primary);                            /* Token din√°mico en lugar de #f4a261 */
        margin-bottom: var(--gap-mobile);
        letter-spacing: var(--tracking-wide);                    /* Token en lugar de 2px */
    }

    .carta-subtitle {
        font-size: var(--text-lg);                              /* Token en lugar de 1.1rem */
        color: var(--text-secondary);                           /* Token din√°mico en lugar de #ccc */
        opacity: 0.8;
    }

    /* === NAVEGACI√ìN DE CATEGOR√çAS - MANTENIENDO DISE√ëO ORIGINAL === */
    .menu-nav {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: calc(var(--gap-mobile) * 0.5);                     /* Token en lugar de gap hardcodeado */
        margin-bottom: calc(var(--gap-mobile) * 2.5);
    }

    .menu-nav-btn {
        /* ‚ú® MANTENER: Exactamente el mismo dise√±o visual */
        background: transparent;
        border: var(--border-2) solid rgba(244, 162, 97, 0.3);  /* Mantener color original */
        color: var(--text-primary);                             /* Token din√°mico */
        padding: calc(var(--padding-mobile) * 0.6) var(--padding-mobile); /* Tokens en lugar de hardcoded */
        border-radius: var(--radius-3xl);                       /* Token en lugar de 25px */
        cursor: pointer;
        transition: var(--transition-base);                     /* Token en lugar de all 0.3s cubic-bezier */
        font-weight: var(--font-semibold);                      /* Token en lugar de 600 */
        letter-spacing: var(--tracking-normal);                 /* Token en lugar de 1px */
        text-transform: uppercase;
        font-size: var(--text-sm);                             /* Token en lugar de 0.8rem */
    }

    .menu-nav-btn:hover,
    .menu-nav-btn.active {
        /* ‚ú® MANTENER: Exactamente los mismos colores originales */
        background: #f4a261;                                    /* Mantener color exacto */
        color: #141414;                                          /* Mantener color exacto */
        border-color: #f4a261;                                  /* Mantener color exacto */
        transform: translateY(-2px);
    }

    /* === CONTENEDOR DE MEN√ö === */
    .menu-content {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--gap-mobile);
        margin-bottom: var(--gap-mobile);
        overflow: hidden;
    }

    .menu-category {
        /* ‚ú® MANTENER: Exactamente el mismo dise√±o visual */
        background: rgba(0, 0, 0, 0.6);                         /* Mantener opacidad original */
        backdrop-filter: var(--backdrop-blur);                  /* Token en lugar de blur(10px) */
        border-radius: var(--radius-xl);                        /* Token en lugar de 15px */
        border: var(--border-1) solid rgba(244, 162, 97, 0.2);  /* Mantener color original */
        box-shadow: 0 var(--space-3) var(--space-8) rgba(0, 0, 0, 0.3); /* Tokens en lugar de 10px 30px */
        padding: calc(var(--padding-mobile) * 1.5);
        margin-bottom: calc(var(--gap-mobile) * 1.5);
        
        /* ‚ú® REMOVIDO: Animaci√≥n fadeInUp para mantener original */
    }

    .menu-category:last-child {
        margin-bottom: 0;
    }

    .category-title {
        font-size: var(--text-xl);                             /* Token en lugar de 1.3rem */
        color: var(--accent-primary);                          /* Token din√°mico en lugar de #f4a261 */
        font-weight: var(--font-semibold);                     /* Token en lugar de 600 */
        text-align: center;
        border-bottom: var(--border-2) solid rgba(244, 162, 97, 0.3); /* Mantener color original */
        margin-bottom: calc(var(--gap-mobile) * 0.75);
        padding-bottom: calc(var(--padding-mobile) * 0.25);
    }

    /* === ITEMS DEL MEN√ö === */
    .menu-item {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        border-bottom: var(--border-1) solid rgba(255, 255, 255, 0.1); /* Mantener color original */
        margin-bottom: calc(var(--gap-mobile) * 0.6);
        padding-bottom: calc(var(--padding-mobile) * 0.4);
    }

    .menu-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .item-info {
        flex: 1;
        padding-right: var(--padding-mobile);
    }

    .item-name {
        font-weight: var(--font-semibold);                      /* Token en lugar de 600 */
        color: var(--text-primary);                            /* Token din√°mico */
        margin-bottom: calc(var(--gap-mobile) * 0.15);
        font-size: var(--text-sm);                             /* Token en lugar de 0.9rem */
    }

    .item-description {
        font-size: var(--text-xs);                             /* Token en lugar de 0.8rem */
        color: var(--text-secondary);                          /* Token din√°mico en lugar de #ccc */
        opacity: 0.8;
        line-height: var(--leading-normal);                    /* Token en lugar de 1.4 */
    }

    .item-price {
        color: var(--accent-primary);                          /* Token din√°mico en lugar de #f4a261 */
        font-weight: var(--font-bold);                         /* Token en lugar de 700 */
        font-size: var(--text-base);                           /* Token en lugar de 1rem */
        white-space: nowrap;
    }

    /* === SECCIONES ESPEC√çFICAS - ARREGLADO === */
    .menu-section {
        display: none;
    }

    .menu-section.active {
        display: grid;
    }

    /* === RESPONSIVE - ENFOCADO EN LAYOUT INTERNO === */
    
    /* TABLET Y SUPERIOR (768px+) */
    @media (min-width: 768px) {
        .carta-header {
            margin-bottom: calc(var(--gap-tablet) * 2);
        }

        .carta-title {
            font-size: clamp(var(--text-4xl), 4vw, var(--text-5xl));
            margin-bottom: var(--gap-tablet);
        }

        .carta-subtitle {
            font-size: var(--text-xl);                         /* Token en lugar de 1.2rem */
        }

        .menu-nav {
            gap: var(--gap-tablet);
            margin-bottom: var(--gap-tablet);
        }

        .menu-nav-btn {
            padding: calc(var(--padding-tablet) * 0.4) calc(var(--padding-tablet) * 0.75);
            font-size: var(--text-base);                       /* Token en lugar de 0.9rem */
        }

        .menu-content {
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: var(--gap-tablet);
            margin-bottom: var(--gap-tablet);
        }

        .menu-category {
            padding: var(--padding-tablet);
            margin-bottom: var(--gap-tablet);
        }

        .category-title {
            font-size: var(--text-2xl);                        /* Token en lugar de 1.5rem */
            margin-bottom: var(--gap-tablet);
            padding-bottom: calc(var(--padding-tablet) * 0.25);
        }

        .menu-item {
            margin-bottom: calc(var(--gap-tablet) * 0.6);
            padding-bottom: calc(var(--padding-tablet) * 0.4);
        }

        .item-info {
            padding-right: var(--padding-tablet);
        }

        .item-name {
            margin-bottom: calc(var(--gap-tablet) * 0.15);
            font-size: var(--text-base);                       /* Token en lugar de 1rem */
        }

        .item-description {
            font-size: var(--text-sm);                         /* Token en lugar de 0.85rem */
        }

        .item-price {
            font-size: var(--text-lg);                         /* Token en lugar de 1.1rem */
        }
    }

    /* DESKTOP (1024px+) */
    @media (min-width: 1024px) {
        .carta-header {
            margin-bottom: calc(var(--gap-desktop) * 1.33);
        }

        .carta-title {
            margin-bottom: var(--gap-desktop);
        }

        .menu-nav {
            gap: var(--gap-desktop);
            margin-bottom: var(--gap-desktop);
        }

        .menu-nav-btn {
            padding: calc(var(--padding-desktop) * 0.27) calc(var(--padding-desktop) * 0.5);
        }

        .menu-content {
            gap: var(--gap-desktop);
            margin-bottom: var(--gap-desktop);
        }

        .menu-category {
            padding: calc(var(--padding-desktop) * 0.67);
            margin-bottom: calc(var(--gap-desktop) * 0.67);
        }

        .category-title {
            margin-bottom: calc(var(--gap-desktop) * 0.5);
            padding-bottom: calc(var(--padding-desktop) * 0.17);
        }

        .menu-item {
            margin-bottom: calc(var(--gap-desktop) * 0.4);
            padding-bottom: calc(var(--padding-desktop) * 0.27);
        }

        .item-info {
            padding-right: var(--padding-desktop);
        }

        .item-name {
            margin-bottom: calc(var(--gap-desktop) * 0.1);
        }
    }

    /* DESKTOP LARGE (1400px+) */
    @media (min-width: 1400px) {
        .carta-header {
            margin-bottom: var(--gap-desktop-lg);
        }

        .carta-title {
            margin-bottom: var(--gap-desktop-lg);
        }

        .menu-nav {
            gap: var(--gap-desktop-lg);
            margin-bottom: var(--gap-desktop-lg);
        }

        .menu-content {
            gap: var(--gap-desktop-lg);
            margin-bottom: var(--gap-desktop-lg);
        }
    }

    /* MOBILE PEQUE√ëO (0-420px) */
    @media (max-width: 420px) {
        .carta-header {
            margin-bottom: calc(var(--gap-mobile) * 2);
        }

        .carta-title {
            font-size: clamp(var(--text-2xl), 4vw, var(--text-4xl));
            margin-bottom: calc(var(--gap-mobile) * 0.75);
        }

        .carta-subtitle {
            font-size: var(--text-base);                       /* Token en lugar de 1rem */
        }

        .menu-nav {
            gap: calc(var(--gap-mobile) * 0.5);
            margin-bottom: calc(var(--gap-mobile) * 2);
        }

        .menu-nav-btn {
            padding: calc(var(--padding-mobile) * 0.5) calc(var(--padding-mobile) * 0.8);
            font-size: var(--text-xs);                         /* Token en lugar de 0.75rem */
        }

        .menu-content {
            gap: calc(var(--gap-mobile) * 0.75);
            margin-bottom: calc(var(--gap-mobile) * 0.75);
        }

        .menu-category {
            padding: var(--padding-mobile);
            margin-bottom: var(--gap-mobile);
        }

        .category-title {
            font-size: var(--text-lg);                         /* Token en lugar de 1.2rem */
            margin-bottom: calc(var(--gap-mobile) * 0.5);
        }

        .menu-item {
            margin-bottom: calc(var(--gap-mobile) * 0.4);
        }

        .item-name {
            font-size: var(--text-sm);                         /* Token en lugar de 0.85rem */
        }

        .item-description {
            font-size: var(--text-xs);                         /* Token en lugar de 0.75rem */
        }

        .item-price {
            font-size: var(--text-sm);                         /* Token en lugar de 0.95rem */
        }
    }

    /* === ACCESIBILIDAD MEJORADA === */
    
    /* Focus visible para navegaci√≥n por teclado */
    .menu-nav-btn:focus-visible {
        outline: var(--border-2) solid var(--focus-ring);
        outline-offset: var(--space-1);
    }

    /* === PREFERENCIAS DE USUARIO === */
    
    /* Respeto por movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        .menu-nav-btn {
            transition: none;
        }
        
        .menu-nav-btn:hover,
        .menu-nav-btn.active {
            transform: none;
        }
    }
    
    /* Alto contraste */
    @media (prefers-contrast: high) {
        .menu-nav-btn {
            border-width: var(--border-4);
        }
        
        .menu-category {
            border: var(--border-2) solid rgba(244, 162, 97, 0.4);
            background: rgba(0, 0, 0, 0.8);
        }
        
        .category-title {
            border-bottom-width: var(--border-4);
        }
    }

    /* === OPTIMIZACIONES DE PERFORMANCE === */
    
    /* Contener layout para mejor performance */
    .menu-content {
        contain: layout style;
    }
    
    .menu-category {
        contain: layout style paint;
    }
</style>

<script>
    import { useBreakpoints, disableTransitionsDuringResize } from '../../utils/breakpoints.js';
    
    document.addEventListener('DOMContentLoaded', () => {
        const navButtons = document.querySelectorAll('.menu-nav-btn');
        const menuSections = document.querySelectorAll('.menu-section');
        const cartaSection = document.querySelector('.carta-section');
        const menuCategories = document.querySelectorAll('.menu-category');
        
        // Inicializar sistema de breakpoints
        const breakpoints = useBreakpoints('carta-component', {
            element: cartaSection
        });
        
        // Suscribirse a cambios de breakpoint
        breakpoints.subscribe({
            onBreakpointChange: (newBreakpoint, oldBreakpoint) => {
                console.log(`Carta: Breakpoint changed ${oldBreakpoint} ‚Üí ${newBreakpoint}`);
                
                // Deshabilitar transiciones durante el cambio para evitar glitches
                const elementsToAdjust = [...menuCategories];
                disableTransitionsDuringResize(elementsToAdjust);
            }
        });

        // Funcionalidad original de navegaci√≥n de categor√≠as
        navButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                // Quitar active de todos los botones
                navButtons.forEach(b => b.classList.remove('active'));
                // A√±adir active al bot√≥n clickeado
                btn.classList.add('active');

                // Ocultar todas las secciones
                menuSections.forEach(section => section.classList.remove('active'));
                // Mostrar la secci√≥n correspondiente
                const targetCategory = btn.getAttribute('data-category');
                const targetSection = document.getElementById(targetCategory);
                if (targetSection) {
                    targetSection.classList.add('active');
                }
            });
        });
        
        // Cleanup al descargar la p√°gina
        window.addEventListener('beforeunload', () => {
            breakpoints.unsubscribe();
        });
    });
</script>