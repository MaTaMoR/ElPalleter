<script>
    // Funcionalidad para cambiar entre categor√≠as usando sistema global
    document.addEventListener('DOMContentLoaded', () => {
        // Importar utilidades de breakpoints si est√°n disponibles
        // import { getCurrentBreakpoint, onBreakpointChange } from '../utils/breakpoints.js';
        
        const navButtons = document.querySelectorAll('.menu-nav-btn');
        const menuSections = document.querySelectorAll('.menu-section');
        
        let currentBreakpoint = window.innerWidth <= 767 ? 'mobile' : 
                               window.innerWidth <= 1023 ? 'tablet' : 'desktop';

        navButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                // Quitar active de todos los botones
                navButtons.forEach(b => b.classList.remove('active'));
                // A√±adir active al bot√≥n clickeado
                btn.classList.add('active');

                // Ocultar todas las secciones
                menuSections.forEach(section => section.classList.remove('active'));
                // Mostrar la secci√≥n correspondiente
                const targetCategory = btn.getAttribute('data-category');
                const targetSection = document.getElementById(targetCategory);
                if (targetSection) {
                    targetSection.classList.add('active');
                }
            });
        });

        // Detectar cambios de breakpoint para optimizar animaciones
        let resizeTimer;

        window.addEventListener('resize', () => {
            clearTimeout(resizeTimer);
            
            resizeTimer = setTimeout(() => {
                const newBreakpoint = window.innerWidth <= 767 ? 'mobile' : 
                                     window.innerWidth <= 1023 ? 'tablet' : 'desktop';
                
                if (newBreakpoint !== currentBreakpoint) {
                    currentBreakpoint = newBreakpoint;
                    
                    // Optimizar transiciones durante cambio de breakpoint
                    const cartaSection = document.querySelector('.carta-section');
                    const menuCategories = document.querySelectorAll('.menu-category');
                    
                    if (cartaSection) {
                        cartaSection.style.transition = 'none';
                        
                        menuCategories.forEach(category => {
                            category.style.transition = 'none';
                        });
                        
                        requestAnimationFrame(() => {
                            setTimeout(() => {
                                cartaSection.style.transition = '';
                                menuCategories.forEach(category => {
                                    category.style.transition = '';
                                });
                            }, 100);
                        });
                    }
                }
            }, 150);
        });
    });
</script>