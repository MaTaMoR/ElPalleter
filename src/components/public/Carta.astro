<style>
    /* === CARTA SECTION - USANDO SISTEMA GLOBAL === */
    .carta-section {
        min-height: 100vh;
        background: rgb(20, 20, 20);
        position: relative;
        /* Mobile base */
        padding: calc(var(--padding-mobile) * 5) 0 calc(var(--padding-mobile) * 2.5) 0; /* 100px top, 50px bottom */
    }

    /* Efecto de part√≠culas animadas en el fondo */
    .carta-section:before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: radial-gradient(circle at 25% 25%, #f4a261 1px, transparent 1px),
                        radial-gradient(circle at 75% 75%, #f4a261 1px, transparent 1px),
                        radial-gradient(circle at 40% 80%, #f4a261 1px, transparent 1px),
                        radial-gradient(circle at 80% 20%, #f4a261 1px, transparent 1px),
                        radial-gradient(circle at 15% 60%, #f4a261 1px, transparent 1px);
        background-size: 120px 120px, 150px 150px, 100px 100px, 180px 180px, 90px 90px;
        opacity: 0.15;
        animation: float 25s ease-in-out infinite;
        z-index: 1;
    }

    @keyframes float {
        0%, 100% { 
            transform: translateY(0px) translateX(0px); 
        }
        25% { 
            transform: translateY(-15px) translateX(5px); 
        }
        50% { 
            transform: translateY(-25px) translateX(-10px); 
        }
        75% { 
            transform: translateY(-10px) translateX(8px); 
        }
    }

    .carta-container {
        /* Usando container global del sistema */
        z-index: 2;
        position: relative;
    }

    /* === HEADER === */
    .carta-header {
        text-align: center;
        /* Mobile base */
        margin-bottom: calc(var(--gap-mobile) * 3); /* Equivalente a 3rem */
    }

    .carta-title {
        font-size: clamp(2rem, 4vw, 3.5rem);
        font-weight: 300;
        color: #f4a261;
        margin-bottom: var(--gap-mobile);
        letter-spacing: 2px;
    }

    .carta-subtitle {
        font-size: 1.1rem;
        color: #ccc;
        opacity: 0.8;
    }

    /* === NAVEGACI√ìN DE CATEGOR√çAS === */
    .menu-nav {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        /* Mobile base */
        gap: calc(var(--gap-mobile) * 0.5);
        margin-bottom: calc(var(--gap-mobile) * 2.5);
    }

    .menu-nav-btn {
        background: transparent;
        border: 2px solid rgba(244, 162, 97, 0.3);
        color: white;
        /* Mobile base */
        padding: calc(var(--padding-mobile) * 0.6) var(--padding-mobile);
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        font-weight: 600;
        letter-spacing: 1px;
        text-transform: uppercase;
        font-size: 0.8rem;
    }

    .menu-nav-btn:hover,
    .menu-nav-btn.active {
        background: #f4a261;
        color: #141414;
        border-color: #f4a261;
        transform: translateY(-2px);
    }

    /* === CONTENEDOR DE MEN√ö === */
    .menu-content {
        display: grid;
        /* Mobile base */
        grid-template-columns: 1fr;
        gap: var(--gap-mobile);
        margin-bottom: var(--gap-mobile);
    }

    .menu-category {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        border: 1px solid rgba(244, 162, 97, 0.2);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        /* Mobile base */
        padding: calc(var(--padding-mobile) * 1.5);
        margin-bottom: calc(var(--gap-mobile) * 1.5);
        animation: fadeInUp 0.6s ease-out;
    }

    .menu-category:last-child {
        margin-bottom: 0;
    }

    .category-title {
        font-size: 1.3rem;
        color: #f4a261;
        font-weight: 600;
        text-align: center;
        border-bottom: 2px solid rgba(244, 162, 97, 0.3);
        /* Mobile base */
        margin-bottom: calc(var(--gap-mobile) * 0.75);
        padding-bottom: calc(var(--padding-mobile) * 0.25);
    }

    /* === ITEMS DEL MEN√ö === */
    .menu-item {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        /* Mobile base */
        margin-bottom: calc(var(--gap-mobile) * 0.6);
        padding-bottom: calc(var(--padding-mobile) * 0.4);
    }

    .menu-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .item-info {
        flex: 1;
        padding-right: var(--padding-mobile);
    }

    .item-name {
        font-weight: 600;
        color: white;
        margin-bottom: calc(var(--gap-mobile) * 0.15);
        font-size: 0.9rem;
    }

    .item-description {
        font-size: 0.8rem;
        color: #ccc;
        opacity: 0.8;
        line-height: 1.4;
    }

    .item-price {
        color: #f4a261;
        font-weight: 700;
        font-size: 1rem;
        white-space: nowrap;
    }

    /* === SECCIONES ESPEC√çFICAS === */
    .menu-section {
        display: none;
    }

    .menu-section.active {
        display: grid;
    }

    /* === ANIMACIONES === */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* === BREAKPOINTS USANDO SISTEMA GLOBAL === */

    /* TABLET Y SUPERIOR (768px+) */
    @media (min-width: 768px) {
        .carta-section {
            padding: calc(var(--padding-tablet) * 6) 0 calc(var(--padding-tablet) * 2.5) 0; /* 120px top, 50px bottom */
        }

        .carta-header {
