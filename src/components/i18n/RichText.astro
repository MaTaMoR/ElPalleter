  /* Párrafos HTML estándar */
  .richtext-editor p {
    font-family: var(--rt-font-family);
    font-size: clamp(var(--text-base), 1.25vw, var(--text-lg));
    font-weight: var(--font-normal);
    line-height: var(--leading-normal);
